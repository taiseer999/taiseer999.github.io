<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <zorder>2</zorder>
    <menucontrol>9000</menucontrol>
    <defaultcontrol>9000</defaultcontrol>

    <controls>

        <include>Dialog_Dim_Overlay</include>

        <control type="group">
            <include>Dimension_DialogMainMenu</include>
            <include>Animation_Right_Delay</include>

            <include content="Dialog_Background_Group">
                <param name="dialog_size">Dimension_DialogMainMenu</param>
            </include>

            <control type="group">
                <include content="Dimension_Padding">
                    <param name="pad">40</param>
                </include>
                <include content="Dialog_Overlay_Mode_Glass">
                    <param name="flipped">false</param>
                </include>
            </control>

            <control type="group">
                <!-- Header -->
                <include content="Dialog_Head">
                    <param name="label">$INFO[ListItem.Label]</param>
                </include>
                <include>Dialog_Head_CloseButton</include>

                <!-- Content -->
                <control type="group">
                    <bottom>240</bottom>
                    <include>Dimension_Dialog_Body</include>
                    <control type="group">
                        <include>Dimension_Dialog_Body_Group</include>
                        <include>DialogInfo_PlotBox_Artwork</include>
                        <include content="Dialog_Outline_InnerBox">
                            <left>420</left>
                            <top>-20</top>
                            <bottom>-20</bottom>
                            <right>20</right>
                        </include>
                        <control type="grouplist">
                            <top>30</top>
                            <right>60</right>
                            <bottom>30</bottom>
                            <left>460</left>
                            <orientation>vertical</orientation>
                            <itemgap>20</itemgap>
                            <control type="label">
                                <font>font_midi_bold</font>
                                <height>40</height>
                                <textcolor>main_fg_90</textcolor>
                                <label>$LOCALIZE[20037]</label>
                            </control>
                            <control type="label">
                                <font>font_midi_plot</font>
                                <height>40</height>
                                <label fallback="19055">$INFO[ListItem.AddonSummary]</label>
                            </control>

                            <control type="group">
                                <height>40</height>
                                <control type="image">
                                    <left>8</left>
                                    <height>48</height>
                                    <width>48</width>
                                    <texture colordiffuse="dialog_fg_90">special://skin/extras/icons/id-card.png</texture>
                                    <centertop>50%</centertop>
                                </control>
                                <control type="label">
                                    <left>60</left>
                                    <font>font_midi</font>
                                    <label>$INFO[ListItem.AddonCreator]</label>
                                </control>
                            </control>

                            <control type="group">
                                <height>40</height>
                                <control type="image">
                                    <left>8</left>
                                    <height>48</height>
                                    <width>48</width>
                                    <texture colordiffuse="dialog_fg_90">special://skin/extras/icons/tag.png</texture>
                                    <centertop>50%</centertop>
                                </control>
                                <control type="label">
                                    <left>60</left>
                                    <font>font_midi</font>
                                    <label>$INFO[ListItem.AddonType]</label>
                                </control>
                            </control>

                            <control type="group">
                                <height>40</height>
                                <control type="image">
                                    <left>8</left>
                                    <height>48</height>
                                    <width>48</width>
                                    <texture colordiffuse="dialog_fg_90">special://skin/extras/icons/code-branch.png</texture>
                                    <centertop>50%</centertop>
                                </control>
                                <control type="label">
                                    <left>60</left>
                                    <font>font_midi</font>
                                    <label>$INFO[ListItem.AddonVersion,v,]</label>
                                </control>
                            </control>

                            <control type="group">
                                <height>40</height>
                                <control type="image">
                                    <left>8</left>
                                    <height>48</height>
                                    <width>48</width>
                                    <texture colordiffuse="dialog_fg_90">special://skin/extras/icons/clock-rotate-left.png</texture>
                                    <centertop>50%</centertop>
                                </control>
                                <control type="label">
                                    <left>60</left>
                                    <font>font_midi</font>
                                    <label>$VAR[Label_AddonInfo_LastUpdated]</label>
                                </control>
                            </control>

                            <control type="textbox">
                                <top>40</top>
                                <font>font_midi_plot</font>
                                <height>160</height>
                                <autoscroll>false</autoscroll>
                                <pagecontrol>61</pagecontrol>
                                <label fallback="19055">$INFO[ListItem.AddonDescription,[B][COLOR=dialog_fg_90]$LOCALIZE[21821][/B][/COLOR][CR],[CR][CR]]$INFO[ListItem.AddonNews,[B][COLOR=dialog_fg_90]$LOCALIZE[29916][/B][/COLOR][CR],]</label>
                            </control>

                        </control>
                    </control>
                    <include content="Dialog_InfoText">
                        <param name="label">$INFO[ListItem.AddonDisclaimer]</param>
                        <param name="fallback">$INFO[System.BuildVersion,Kodi ,]</param>
                    </include>
                    <include content="Dialog_Scrollbar">
                        <param name="id">61</param>
                        <param name="inset">true</param>
                        <ondown>9000</ondown>
                        <onback>9</onback>
                    </include>
                </control>

                <!-- Buttons -->
                <control type="grouplist" id="9000">
                    <height>160</height>
                    <bottom>20</bottom>
                    <left>50</left>
                    <right>40</right>
                    <align>center</align>
                    <onup>61</onup>
                    <orientation>horizontal</orientation>
                    <include>Items_DialogAddonInfo_MenuBar</include>
                </control>
            </control>


        </control>
    </controls>
</window>