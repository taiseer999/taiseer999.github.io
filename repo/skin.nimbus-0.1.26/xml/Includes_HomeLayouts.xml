<?xml version="1.0" encoding="UTF-8"?>
<includes>

  <include name="WidgetListCategoryLayout">
		<!-- <param name="item_limit">30</param> -->
		<param name="icon">$INFO[ListItem.Icon]</param>
		<param name="focused">false</param>
		<definition>
			<control type="group">
        <top>26</top>
        <left>56</left>
				<width>279</width>
				<height>139</height>
				<control type="group">
					<control type="image">
						<texture colordiffuse="$VAR[FocusColorTheme]">masks/category-glow.png</texture>
						<bordersize>-21</bordersize>
						<visible>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</visible>
						<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
					</control>
					<include content="GlowPulse">
						<param name="pos_x" value="139.5"/>
						<param name="pos_y" value="69.5"/>
					</include>
				</control>
				<control type="image">
					<texture colordiffuse="dialog_bg">masks/category.png</texture>
					<visible>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</visible>
				</control>
				<control type="image">
					<texture colordiffuse="80000000">masks/category.png</texture>
					<bordersize>2</bordersize>
					<bordertexture colordiffuse="$VAR[FocusColorTheme]" border="10" infill="false">masks/category-border.png</bordertexture>
					<visible>![$PARAM[focused] + Control.HasFocus($PARAM[list_id])]</visible>
				</control>
				<control type="image">
					<centertop>37%</centertop>
					<centerleft>50%</centerleft>
					<width>90</width>
					<height>90</height>
					<texture diffuse="masks/category.png" colordiffuse="artwork_dim" background="true">$PARAM[icon]</texture>
					<aspectratio aligny="bottom" align="center">scale</aspectratio>
					<visible>!$EXP[isContent]</visible>
				</control>
				<control type="image">
					<centertop>50%</centertop>
					<centerleft>50%</centerleft>
					<texture diffuse="masks/category.png" colordiffuse="artwork_dim" background="true">$PARAM[icon]</texture>
					<aspectratio scalediffuse="false">scale</aspectratio>
					<visible>$EXP[isContent]</visible>
				</control>
				<control type="label">
					<centerleft>50%</centerleft>
					<!-- 145 -->
					<top>75</top>
					<width>240</width>
					<height>65</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>$VAR[AddonsTitleVar]</label>
					<font>font25</font>
					<textcolor>unfocused_text</textcolor>
					<scroll>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</scroll>
					<scrollspeed>50</scrollspeed>
					<visible>!$EXP[isContent]</visible>
				</control>
			</control>
		</definition>
	</include>

  <include name="WidgetListPVRLayout">
		<!-- <param name="item_limit">30</param> -->
		<param name="icon">$INFO[ListItem.Icon]</param>
    <param name="label">$INFO[ListItem.Label]</param>
		<param name="label2">$INFO[ListItem.Title]</param>
		<param name="label3">$INFO[ListItem.StartTime]</param>
		<param name="label4">$INFO[ListItem.EndTime]</param>
		<!-- <param name="label4">[COLOR grey]Ends:[/COLOR] $INFO[ListItem.EndTime]</param> -->
		<param name="focused">false</param>
		<definition>
			<control type="group">
        <top>26</top>
        <left>56</left>
				<width>434</width>
				<height>279</height>
				<control type="group">
					<control type="image">
						<texture colordiffuse="$VAR[FocusColorTheme]">masks/pvr-glow.png</texture>
						<bordersize>-26</bordersize>
						<visible>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</visible>
						<include condition="$PARAM[focused]">Animation_FocusTextureFade</include>
					</control>
					<include content="GlowPulse">
						<param name="pos_x" value="217"/>
						<param name="pos_y" value="139.5"/>
					</include>
				</control>
				<control type="image">
					<texture colordiffuse="dialog_bg">masks/pvr.png</texture>
					<visible>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</visible>
				</control>
				<control type="image">
					<texture colordiffuse="80000000">masks/pvr.png</texture>
					<bordersize>2</bordersize>
					<bordertexture colordiffuse="$VAR[FocusColorTheme]" border="10" infill="false">masks/pvr-border.png</bordertexture>
