				<control type="image">
          <centertop>30%</centertop>
          <centerleft>50%</centerleft>
          <width>153</width>
          <height>110</height>
					<!-- <texture align="center" aligny="center" colordiffuse="artwork_dim" fallback="DefaultTVShows.png" background="true">masks/addons.png</texture> -->
					<texture align="center" aligny="top" colordiffuse="artwork_dim" diffuse="masks/pvr.png" fallback="DefaultTVShows.png" background="true">$PARAM[icon]</texture>
					<aspectratio>keep</aspectratio>
				</control>
				<control type="label">
					<centerleft>50%</centerleft>
					<top>130</top>
					<width>370</width>
					<height>75</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>[LIGHT]$PARAM[label][/LIGHT]</label>
          <scroll>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</scroll>
					<font>font25_title</font>
					<textcolor>unfocused_text</textcolor>
				</control>
				<control type="label">
					<centerleft>50%</centerleft>
					<top>165</top>
					<width>370</width>
					<height>75</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>$PARAM[label2]</label>
          <scroll>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</scroll>
					<font>font25</font>
					<textcolor>unfocused_text</textcolor>
				</control>
				<control type="label">
					<centerleft>-13%</centerleft>
					<top>207</top>
					<width>370</width>
					<height>75</height>
					<align>right</align>
					<aligny>center</aligny>
					<label>$PARAM[label3]</label>
          <scroll>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</scroll>
					<font>font25</font>
					<textcolor>unfocused_text</textcolor>
				</control>
				<control type="label">
					<centerleft>113%</centerleft>
					<top>207</top>
					<width>370</width>
					<height>75</height>
					<align>left</align>
					<aligny>center</aligny>
					<label>$PARAM[label4]</label>
          <scroll>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</scroll>
					<font>font25</font>
					<textcolor>unfocused_text</textcolor>
				</control>
				<!-- <control type="label">
					<centerleft>50%</centerleft>
					<top>320</top>
					<width>240</width>
					<height>75</height>
					<align>center</align>
					<aligny>center</aligny>
					<label>$PARAM[label4]</label>
          <scroll>$PARAM[focused] + Control.HasFocus($PARAM[list_id])</scroll>
					<font>font25</font>
					<textcolor>unfocused_text</textcolor>
				</control> -->
        <control type="group">
          <visible>!Integer.IsEqual(ListItem.Progress,0)</visible>
          <control type="progress">
            <centerleft>50%</centerleft>
            <top>243</top>
            <width>150</width>
            <height>7</height>
            <info>ListItem.PercentPlayed</info>
						<midtexture colordiffuse="$VAR[FocusColorTheme]">osd/Progress.png</midtexture>
          </control>
          <control type="progress">
            <centerleft>50%</centerleft>
            <top>243</top>
            <width>150</width>
            <height>7</height>
            <info>ListItem.Progress</info>
						<midtexture colordiffuse="$VAR[FocusColorTheme]">osd/Progress.png</midtexture>
          </control>
        </control>
			</control>
		</definition>
	</include>

