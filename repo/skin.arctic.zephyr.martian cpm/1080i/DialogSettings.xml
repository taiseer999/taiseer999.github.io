<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <controls>
        <control type="group">
            <animation effect="fade" start="100" end="0" time="400" condition="Window.IsVisible(SliderDialog)">Conditional</animation>
            <include>GlobalOverlay</include>
        </control>
        <control type="group">
            <animation effect="fade" start="100" end="0" time="400" condition="Window.IsVisible(SliderDialog)">Conditional</animation>

            <include content="DefDialogBackground">
                <param name="width" value="1450"/>
                <param name="height" value="840"/>
            </include>

            <control type="label" id="2">
                <include>DefDialogHeader</include>
            </control>

            <include content="Kodi_Logo">
                <param name="dimensions" value="40"/>
                <param name="top" value="40"/>
                <param name="left" value="40"/>
            </include>

            <!-- Lines -->
            <control type="image">
                <top>95</top>
                <left>40</left>
                <right>40</right>
                <height>1</height>
                <bottom>10</bottom>
                <colordiffuse>Black12</colordiffuse>
                <texture>common/white.png</texture>
            </control>  

            <include content="Def_Gradient_Settings_Image">
                <param name="controlid" value="5"/>
                <param name="left" value="8"/>
                <param name="top" value="115"/>
                <param name="width" value="1067"/>
                <param name="height" value="66"/>
                <param name="slide" value="69"/>
            </include>

            <control type="grouplist" id="5">
                <description>Control Area</description>
                <usecontrolcoords>true</usecontrolcoords>
                <left>8</left>
                <width>1067</width>
                <top>115</top>
                <height>687</height>
                <itemgap>3</itemgap>
                <orientation>vertical</orientation>
                <pagecontrol>60</pagecontrol>
                <onleft>8000</onleft>
                <onright>60</onright>
                <scrolltime>0</scrolltime>
            </control>

            <include content="scrollbar_dialog">
                <param name="scrollid" value="60"/>
                <param name="onleft" value="5"/>
                <param name="onright" value="8000"/>
                <param name="height" value="690"/>                
            </include>

            <!-- Lines -->
            <control type="image">
                <top>115</top>
                <right>375</right>
                <height>690</height>
                <width>1</width>
                <texture colordiffuse="Black12">common/white.png</texture>
                <!-- <animation effect="fade" start="0" end="100" time="100" condition="!Control.HasFocus(1723) + !Container.Scrolling">Conditional</animation> -->
            </control>

             <!-- Buttons -->           
            <control type="grouplist" id="8000">
                <top>115</top>              
                <right>42</right>
                <width>300</width>
                <itemgap>DialogButtonsItemgap</itemgap>
                <orientation>vertical</orientation>
                <onleft>60</onleft>
                <onright>5</onright>
                <control type="button" id="28">
                    <description>OK</description>
		            <include>DefDialogButtons</include>
                </control>
                <control type="button" id="29">
                    <description>Cancel</description>
		            <include>DefDialogButtons</include>
                </control>
                <control type="button" id="30">
                    <description>Defaults</description>
		            <include>DefDialogButtons</include>
                </control>
            </control>
            <control type="button" id="7">
                <description>Default Button</description>
                <align>left</align>
                <height>66</height>
                <focusedcolor>Selected</focusedcolor>
                <texturefocus colordiffuse="$VAR[ColorGradient]" border="5">common/gradient-box-wide-cut.png</texturefocus>
            </control>
            <control type="radiobutton" id="8">
                <description>Default RadioButton</description>
                <align>left</align>
                <radioposx>1010</radioposx>
                <texturefocus colordiffuse="$VAR[ColorGradient]" border="8">common/gradient-box-wide-cut.png</texturefocus>
            </control>
            <control type="spincontrolex" id="9">
                <description>Default spincontrolex</description>
                <align>left</align>
                <reverse>yes</reverse>
                <texturefocus colordiffuse="$VAR[ColorGradient]" border="8">common/gradient-box-wide-cut.png</texturefocus>
            </control>
            <control type="image" id="11">
                <visible>false</visible>
            </control>
            <control type="edit" id="12">
                <description>Default Button</description>
                <align>left</align>
                <texturefocus colordiffuse="$VAR[ColorGradient]" border="8">common/gradient-box-wide-cut.png</texturefocus>
            </control>
            <control type="sliderex" id="13">
                <description>Default Slider</description>
                <texturefocus colordiffuse="$VAR[ColorGradient]" border="8">common/gradient-box-wide-cut.png</texturefocus>
            </control>
            <control type="label" id="14">
                <description>Default Button</description>
                <align>left</align>
                <height>66</height>
                <textoffsetx>20</textoffsetx>
                <textcolor>PanelWhite30</textcolor>
                <include>DefSettingsButtonNew</include>
            </control>
			<control type="gamecontroller" id="100">
				<top>505</top>
				<right>42</right>
				<height>300</height>
				<width>300</width>
			</control>
        </control>
    </controls>
</window>