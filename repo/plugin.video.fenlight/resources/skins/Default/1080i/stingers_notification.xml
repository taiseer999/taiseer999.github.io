<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <animation effect="fade" end="100" time="600">WindowOpen</animation>
    <controls>
        <control type="image">
            <height>550</height>
            <texture>fenlight_common/dim-top.png</texture>
        </control>
        <control type="group">
            <left>20</left>
            <top>20</top>
            <height>160</height>
            <control type="image">
                <left>-1</left>
                <top>-1</top>
                <width>286</width>
                <height>162</height>
                <texture border="16" colordiffuse="FFCCCCCC">fenlight_common/dialog.png</texture>
            </control>
            <control type="image">
                <width>284</width>
                <texture colordiffuse="FF000000" diffuse="fenlight_diffuse/landscape_w284_h160.png">fenlight_common/white.png</texture>
            </control>
            <control type="image">
                <width>284</width>
                <aspectratio>scale</aspectratio>
                <texture diffuse="fenlight_diffuse/landscape_w284_h160.png">$INFO[Window.Property(thumb)]</texture>
                <animation effect="fade" end="65">WindowOpen</animation>
            </control>
            <control type="image">
                <top>80</top>
                <left>72</left>
                <width>140</width>
                <texture>$INFO[Window.Property(clearlogo)]</texture>
                <aspectratio>keep</aspectratio>
                <animation effect="fade" end="80">WindowOpen</animation>
            </control>
            <control type="group">
                <left>275</left>
                <!-- Main Heading & Timer -->
                <control type="group">
                    <!-- Logo -->
                    <control type="image">
                        <left>30</left>
                        <top>0</top>
                        <width>45</width>
                        <height>45</height>
                        <align>left</align>
                        <aligny>top</aligny>
                        <aspectratio aligny="top">keep</aspectratio>
                        <texture colordiffuse="FFB7B4BB">fenlight_common/fenlight.png</texture>
                    </control>
                    <!-- Attention!!! -->
                    <control type="group">
                        <control type="label">
                            <left>80</left>
                            <aligny>center</aligny>
                            <height>40</height>
                            <label>[B]Keep Watching During Credits....[/B]</label>
                            <font>font_midi</font> <!-- FENLIGHT_33 -->
                            <textcolor>FFB7B4BB</textcolor>
                        </control>
                    </control>
                </control>
                <!-- Stinger Conditions -->
                <control type="group">
                    <left>20</left>
                    <top>60</top>
                    <control type="image" id="200">
                        <top>-60</top>
                        <left>18</left>
                        <width>40</width>
                        <align>left</align>
                        <aligny>bottom</aligny>
                        <aspectratio>keep</aspectratio>
                        <colordiffuse>$INFO[Window.Property(color_during)]</colordiffuse>
                    </control>
                    <control type="label">
                        <left>70</left>
                        <description>During Credits Stinger</description>
                        <height>40</height>
                        <width>auto</width>
                        <align>left</align>
                        <aligny>center</aligny>
                        <label>During Credits Stinger</label>
                        <font>font_midi</font> <!-- FENLIGHT_33 -->
                        <textcolor>FFB7B4BB</textcolor>
                    </control>
                    <control type="image" id="201">
                        <top>40</top>
                        <left>18</left>
                        <width>40</width>
                        <align>left</align>
                        <aligny>bottom</aligny>
                        <aspectratio>keep</aspectratio>
                        <colordiffuse>$INFO[Window.Property(color_after)]</colordiffuse>
                    </control>
                    <control type="label">
                        <left>70</left>
                        <description>After Credits Stinger</description>
                        <top>50</top>
                        <height>40</height>
                        <width>auto</width>
                        <align>left</align>
                        <aligny>center</aligny>
                        <label>After Credits Stinger</label>
                        <font>font_midi</font> <!-- FENLIGHT_33 -->
                        <textcolor>FFB7B4BB</textcolor>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
