<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="script.reboottoandroidtv"
       name="Reboot to Android TV"
       version="1.0.0"
       provider-name="U3knOwn">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
  </requires>
  <extension point="xbmc.python.script" library="default.py">
        <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
	<summary>Reboot to Android TV, if possible</summary>
	<description>Restart to Android TV, for Amlogic devices</description>
	<platform>all</platform>
	<assets>
        <icon>icon.png</icon>
    </assets>
  </extension>
</addon>
