        "sleep=0.5",

        {
            "rules": ["!Skin.HasSetting(TextureMaker.Built)"],
            "value": "route=run_executebuiltin=special://skin/shortcuts/skinvariables-startup.json&use_rules=True&var_image_simplebackground={var_image_simplebackground}"
