<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1143">
    <defaultcontrol always="true">6003</defaultcontrol>
    <controls>

        <control type="group">
            <include>OSD_HideControls</include>
            <control type="list" id="513">
                <left>-1920</left>
                <width>1</width>
                <height>1</height>
                <itemlayout width="1" height="1" />
                <focusedlayout width="1" height="1" />
                <content target="videos">$VAR[Path_OSD_NextRecommendation]</content>
            </control>

            <control type="group">
                <bottom>290</bottom>
                <visible>!Container(513).IsUpdating</visible>
                <visible>!Integer.IsEqual(Container(513).NumItems,0)</visible>
                <animation type="WindowOpen" reversible="true">
                    <effect type="fade" start="0" end="100" time="300" delay="600"/>
                    <effect type="slide" start="0,-48" end="0" center="auto" tween="back" easing="out" time="400" delay="600"/>
                </animation>
                <animation type="Visible" reversible="true">
                    <effect type="fade" start="0" end="100" time="300" delay="600"/>
                    <effect type="slide" start="0,-48" end="0" center="auto" tween="back" easing="out" time="400" delay="600"/>
                </animation>
                <include content="OSD_UpNext">
                    <param name="is_addon">false</param>
                    <param name="icon">$VAR[Image_OSD_UpNext_Playlist_Landscape]</param>
                    <param name="label">$LOCALIZE[31196]</param>
                    <param name="secondary_label"> </param>
                    <param name="top_title">$VAR[Label_OSD_UpNext_Playlist_TopTitle]</param>
                    <param name="sub_title">$VAR[Label_OSD_UpNext_Playlist_SubTitle]</param>
                </include>
            </control>

            <control type="group">
                <left>view_pad</left>
                <right>view_pad</right>

                <visible>!Window.IsActive(DialogPlayerProcessInfo.xml)</visible>
                <visible>!Window.IsVisible(DialogSlider.xml)</visible>

                <include content="OSD_CustomDialog_GroupList">
                    <param name="onclick_condition">!VideoPlayer.Content(livetv) + Integer.IsLess(VideoPlayer.PlaylistPosition,VideoPlayer.PlaylistLength)</param>
                    <param name="onclick">PlayerControl(Next)</param>
                    <param name="onclick_condition_alt">!VideoPlayer.Content(livetv) + !Integer.IsLess(VideoPlayer.PlaylistPosition,VideoPlayer.PlaylistLength) + !String.IsEmpty(Container(513).ListItem.FileNameAndPath)</param>
                    <param name="onclick_alt">PlayMedia($ESCINFO[Container(513).ListItem.FileNameAndPath])</param>
                    <param name="icon">special://skin/extras/icons/forward-step.png</param>
                    <param name="button_3">true</param>

                    <param name="onup">Close</param>
                    <param name="onup_02">SetFocus(8200)</param>

                </include>
            </control>
        </control>

    </controls>
</window>
