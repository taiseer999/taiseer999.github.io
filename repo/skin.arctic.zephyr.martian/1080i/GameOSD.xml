<?xml version="1.0" encoding="UTF-8"?>
<!-- Foundation -->
<window>
    <defaultcontrol always="true">101</defaultcontrol>
    <controls>
        <control type="group">
            <include>Animation.FadeIn</include>
            <include>Animation.FadeOut</include>
            <visible>!Window.IsActive(GameVideoFilter) + !Window.IsActive(GameStretchMode) + !Window.IsActive(GameVideoRotation) + !Window.IsActive(InGameSaves) + !Window.IsActive(DialogSlider.xml)</visible>
            <include>GlobalOverlay</include>
        </control>
        <control type="group">
            <centerleft>50%</centerleft>
            <centertop>50%</centertop>
            <width>468</width>
            <height>545</height>
            <visible allowhiddenfocus="true">ControlGroup(9000).HasFocus()</visible>
            <include>Animation.ZoomIn</include>
            <include>Animation.FadeOut</include>
            <visible>!Window.IsActive(1123) + !Window.IsActive(InGameSaves)</visible>
            <control type="image">
                <left>-8</left>
                <top>-20</top>
                <right>10</right>
                <bottom>15</bottom>
                <colordiffuse>White100</colordiffuse>
                <texture border="16">common/rounded-shadow8.png</texture>
            </control>
            <control type="group">
                <left>17</left>
                <top>0</top>
                <control type="label">
                    <description>Header Label</description>
                    <left>70</left>
                    <width>1000</width>
                    <posy>0</posy>
                    <include>FontTop</include>
                    <textcolor>Black70</textcolor>
                    <label>35221</label>
                </control>
                <include>Kodi_Logo</include>
                <!-- Lines -->
                <control type="image">
                    <top>70</top>
                    <left>17</left>
                    <width>385</width>
                    <height>1</height>
                    <bottom>10</bottom>
                    <colordiffuse>Black12</colordiffuse>
                    <texture>common/white.png</texture>
                </control>
            </control>
            <control type="group">
                <height>490</height>
                <left>-20</left>
                <top>-18</top>
                <include content="Def9000Arrows"><param name="arrow_bottom" value="755" /></include>
            </control>
            <include content="Def_Gradient_Settings_Image">
                <param name="controlid" value="9000"/>
                <param name="left" value="0"/>
                <param name="top" value="90"/>
                <param name="width" value="450"/>
            </include>
            <control type="grouplist" id="9000">
                <top>90</top>
                <height>420</height>
                <scrolltime>0</scrolltime>
                <onleft>Close</onleft>
                <onright>Close</onright>
                <itemgap>0</itemgap>
                <usecontrolcoords>true</usecontrolcoords>
                <control type="button" id="101">
                    <description>Pause / Resume button</description>
                    <align>left</align>
                    <label>$LOCALIZE[35224]</label>
                    <include>DefContextButtonGradient</include>
                    <onclick>Play</onclick>
                </control>
                <control type="button" id="102">
                    <description>Save / Load button</description>
                    <align>left</align>
                    <label>$LOCALIZE[35249]</label>
                    <include>DefContextButtonGradient</include>
                    <onclick>ActivateWindow(InGameSaves)</onclick>
                </control>
                <control type="button" id="103">
                    <description>Players button</description>
                    <align>left</align>
                    <label>$LOCALIZE[35172]</label>
                    <include>DefContextButtonGradient</include>
                    <onclick>ActivateWindow(GameAgents)</onclick>
                </control>
                <control type="button" id="104">
                    <description>Reset button</description>
                    <align>left</align>
                    <label>$LOCALIZE[13007]</label>
                    <include>DefContextButtonGradient</include>
                    <onclick>PlayerControl(Reset)</onclick>
                </control>
                <control type="button" id="105">
                    <description>Stop button</description>
                    <align>left</align>
                    <label>$LOCALIZE[35222]</label>
                    <include>DefContextButtonGradient</include>
                    <onclick>Stop</onclick>
                </control>
                <control type="button" id="106">
                    <description>Settings</description>
                    <align>left</align>
                    <label>$LOCALIZE[5]</label>
                    <include>DefContextButtonGradient</include>
                    <onclick>ActivateWindow(1123)</onclick>
                </control>
            </control>
        </control>
    </controls>
</window>