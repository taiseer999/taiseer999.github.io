<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">11</defaultcontrol>
    <controls>

        <!-- show current channels group -->
        <control type="group">
            <left>80</left>
            <width>994</width>
            <height>76</height>
            <top>-4</top>
            <control type="image">
                <texture colordiffuse="panel_bg" border="10">diffuse/box.png</texture>
                <animation effect="fade" end="85" condition="true">Conditional</animation>
            </control>
            <control type="group">
                <left>30</left>
                <right>30</right>
                <top>20</top>
                <bottom>20</bottom>
                <control type="label">
                    <font>font_title_mini</font>
                    <align>right</align>
                    <textcolor>panel_fg_100</textcolor>
                    <selectedcolor>panel_fg_100</selectedcolor>
                    <label>$INFO[VideoPlayer.ChannelGroup]</label>
                </control>
            </control>
        </control>

        <control type="group">
            <left>view_pad</left>
            <right>view_pad</right>
            <top>view_pad</top>
            <bottom>view_pad</bottom>

            <control type="wraplist" id="11">
                <left>0</left>
                <width>1764</width>
                <top>-4</top>
                <height>924</height>
                <orientation>vertical</orientation>
                <focusposition>4</focusposition>
                <movement>0</movement>
                <onleft>PreviousChannelGroup</onleft>
                <onright>NextChannelGroup</onright>
                <itemlayout width="1764" height="115.5">
                    <control type="group">
                        <left>0</left>
                        <width>111.5</width>
                        <top>4</top>
                        <bottom>0</bottom>
                        <control type="image">
                            <texture colordiffuse="panel_bg" border="10">diffuse/box.png</texture>
                            <animation effect="fade" end="85" condition="true">Conditional</animation>
                        </control>
                        <control type="image">
                            <aspectratio>keep</aspectratio>
                            <bordersize>20</bordersize>
                            <texture background="true">$INFO[ListItem.Icon]</texture>
                        </control>
                    </control>
                    <control type="group">
                        <left>115.5</left>
                        <width>878</width>
                        <top>4</top>
                        <bottom>0</bottom>
                        <control type="image">
                            <texture colordiffuse="panel_bg" border="10">diffuse/box.png</texture>
                            <animation effect="fade" end="85" condition="true">Conditional</animation>
                        </control>
                        <control type="group">
                            <left>30</left>
                            <right>30</right>
                            <top>20</top>
                            <bottom>20</bottom>
                            <control type="label">
                                <font>font_button</font>
                                <aligny>top</aligny>
                                <textcolor>panel_fg_100</textcolor>
                                <selectedcolor>panel_fg_100</selectedcolor>
                                <label>$INFO[VideoPlayer.ChannelNumberLabel] &#8226; $INFO[ListItem.Label]</label>
                            </control>
                            <control type="label">
                                <font>font_title_mini</font>
                                <top>30</top>
                                <aligny>top</aligny>
                                <textcolor>panel_fg_100</textcolor>
                                <selectedcolor>panel_fg_100</selectedcolor>
                                <label>$INFO[ListItem.Title]</label>
                            </control>
                            <control type="progress">
                                <top>48</top>
                                <height>12</height>
                                <right>0</right>
                                <width>128</width>
                                <visible>ListItem.HasEpg</visible>
                                <info>ListItem.Progress</info>
                                <lefttexture colordiffuse="panel_fg_30" border="4">diffuse/progress-left.png</lefttexture>
                                <midtexture colordiffuse="panel_fg_30" border="4">diffuse/progress-end.png</midtexture>
                                <righttexture colordiffuse="panel_fg_30" border="4">diffuse/progress-right.png</righttexture>
                                <texturebg colordiffuse="panel_fg_12" border="4">diffuse/progress-256-bg.png</texturebg>
                            </control>
                        </control>
                    </control>
                </itemlayout>
                <focusedlayout width="1764" height="231">
                    <control type="group">
                        <left>0</left>
                        <width>227</width>
                        <top>4</top>
                        <bottom>0</bottom>
                        <control type="image">
                            <texture colordiffuse="panel_bg" border="10">diffuse/box.png</texture>
                            <animation effect="fade" end="85" condition="true">Conditional</animation>
                        </control>
                        <include content="Object_PVR_Icon">
                            <param name="font" value="font_statusbar_bold" />
                        </include>
                    </control>

                    <!-- Now Playing -->
                    <control type="group">
                        <left>231</left>
                        <width>762.5</width>
                        <top>4</top>
                        <bottom>0</bottom>
                        <control type="image">
                            <texture colordiffuse="panel_bg" border="10">diffuse/box.png</texture>
                            <animation effect="fade" end="85" condition="true">Conditional</animation>
                        </control>
                        <control type="group">
                            <left>30</left>
                            <right>30</right>
                            <top>25</top>
                            <bottom>25</bottom>
                            <control type="label">
                                <font>font_button</font>
                                <aligny>top</aligny>
                                <textcolor>panel_fg_100</textcolor>
                                <selectedcolor>panel_fg_100</selectedcolor>
                                <label>$INFO[VideoPlayer.ChannelNumberLabel] &#8226; $LOCALIZE[31184]</label>
                                <visible>!ListItem.IsPlaying</visible>
                            </control>
                            <control type="label">
                                <font>font_button</font>
                                <aligny>top</aligny>
                                <textcolor>panel_fg_100</textcolor>
                                <selectedcolor>panel_fg_100</selectedcolor>
                                <label>$INFO[VideoPlayer.ChannelNumberLabel] &#8226; $LOCALIZE[31114]</label>
                                <visible>ListItem.IsPlaying</visible>
                            </control>
                            <control type="label">
                                <font>font_title_small</font>
                                <top>40</top>
                                <aligny>top</aligny>
                                <textcolor>panel_fg_100</textcolor>
                                <selectedcolor>panel_fg_100</selectedcolor>
                                <visible>!String.IsEmpty(ListItem.Title)</visible>
                                <label>$INFO[ListItem.Title]</label>
                            </control>
                            <control type="label">
                                <font>font_title_small</font>
                                <top>40</top>
                                <aligny>top</aligny>
                                <textcolor>panel_fg_100</textcolor>
                                <selectedcolor>panel_fg_100</selectedcolor>
                                <visible>String.IsEmpty(ListItem.Title)</visible>
                                <label>$INFO[ListItem.Label]</label>
                            </control>
                            <control type="progress">
                                <top>110</top>
                                <height>12</height>
                                <visible>ListItem.HasEpg</visible>
                                <info>ListItem.Progress</info>
                                <texturebg colordiffuse="panel_fg_12" border="4">diffuse/progress-bg.png</texturebg>
                            </control>
                            <control type="label">
                                <font>font_tiny</font>
                                <top>140</top>
                                <aligny>top</aligny>
                                <textcolor>panel_fg_100</textcolor>
                                <selectedcolor>panel_fg_100</selectedcolor>
                                <label>$INFO[ListItem.Genre]</label>
                            </control>
                            <control type="label">
                                <font>font_tiny</font>
                                <top>140</top>
                                <aligny>top</aligny>
                                <align>right</align>
                                <textcolor>panel_fg_100</textcolor>
                                <selectedcolor>panel_fg_100</selectedcolor>
                                <label>$INFO[ListItem.StartTime]$INFO[ListItem.EndTime, - ,]</label>
                            </control>
                        </control>
                    </control>

                    <control type="group">
                        <visible>System.IdleTime(2)</visible>
                        <include>Animation_FadeIn</include>
                        <control type="group">
                            <left>997.5</left>
                            <width>762.5</width>
                            <top>4</top>
                            <bottom>0</bottom>
                            <visible>ListItem.HasEpg</visible>
                            <visible>!String.IsEmpty(ListItem.Plot)</visible>
                            <control type="image">
                                <texture colordiffuse="panel_bg" border="10">diffuse/box.png</texture>
                                <animation effect="fade" end="85" condition="true">Conditional</animation>
                            </control>
                            <control type="group">
                                <left>30</left>
                                <right>30</right>
                                <top>25</top>
                                <bottom>25</bottom>
                                <control type="label">
                                    <font>font_button</font>
                                    <aligny>top</aligny>
                                    <textcolor>panel_fg_100</textcolor>
                                    <selectedcolor>panel_fg_100</selectedcolor>
                                    <label>$LOCALIZE[14116]</label>
                                </control>
                                <control type="textbox">
                                    <font>font_plotbox</font>
                                    <top>57</top>
                                    <aligny>top</aligny>
                                    <textcolor>panel_fg_100</textcolor>
                                    <selectedcolor>panel_fg_100</selectedcolor>
                                    <label>$INFO[ListItem.Plot]</label>
                                </control>
                            </control>
                        </control>
                        <control type="group">
                            <animation effect="slide" start="0" end="0,-231" condition="String.IsEmpty(ListItem.Plot)">Conditional</animation>
                            <top>235</top>
                            <height>227</height>
                            <left>997.5</left>
                            <width>762.5</width>
                            <visible>ListItem.HasEpg</visible>
                            <control type="image">
                                <texture colordiffuse="panel_bg" border="10">diffuse/box.png</texture>
                                <animation effect="fade" end="85" condition="true">Conditional</animation>
                            </control>
                            <control type="group">
                                <left>30</left>
                                <right>30</right>
                                <top>25</top>
                                <bottom>25</bottom>
                                <control type="label">
                                    <font>font_button</font>
                                    <aligny>top</aligny>
                                    <textcolor>panel_fg_100</textcolor>
                                    <selectedcolor>panel_fg_100</selectedcolor>
                                    <label>$LOCALIZE[31178]</label>
                                </control>
                                <control type="label">
                                    <font>font_title_small</font>
                                    <top>40</top>
                                    <aligny>top</aligny>
                                    <textcolor>panel_fg_100</textcolor>
                                    <selectedcolor>panel_fg_100</selectedcolor>
                                    <label>$INFO[ListItem.NextTitle]</label>
                                </control>
                                <control type="image">
                                    <top>110</top>
                                    <height>12</height>
                                    <texture colordiffuse="panel_fg_12" border="4">diffuse/progress-bg.png</texture>
                                </control>
                                <control type="label">
                                    <font>font_tiny</font>
                                    <top>140</top>
                                    <aligny>top</aligny>
                                    <textcolor>panel_fg_100</textcolor>
                                    <selectedcolor>panel_fg_100</selectedcolor>
                                    <label>$INFO[ListItem.NextGenre]</label>
                                </control>
                                <control type="label">
                                    <font>font_tiny</font>
                                    <top>140</top>
                                    <aligny>top</aligny>
                                    <align>right</align>
                                    <textcolor>panel_fg_100</textcolor>
                                    <selectedcolor>panel_fg_100</selectedcolor>
                                    <label>$INFO[ListItem.NextStartTime]$INFO[ListItem.NextEndTime, - ,]</label>
                                </control>
                            </control>
                        </control>
                    </control>
                </focusedlayout>
            </control>
        </control>
    </controls>
</window>
