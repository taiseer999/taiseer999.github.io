<?xml version="1.0" encoding="UTF-8"?>
<window>
	<onload condition="Skin.HasSetting(EnableSplashScreen)">ReplaceWindow($INFO[System.StartupWindow])</onload>
	<controls>
		<control type="group">
			<visible>!Skin.HasSetting(EnableSplashScreen)</visible>
			<control type="image">
				<depth>DepthBackground</depth>
				<include>FullScreenDimensions</include>
				<aspectratio>scale</aspectratio>
				<texture colordiffuse="$VAR[Splash_Opacity]">$VAR[ThemesBGVar]</texture>
				<visible>!Skin.HasSetting(enable_splash_background)</visible>
			</control>
			<control type="image">
				<depth>DepthBackground</depth>
				<include>FullScreenDimensions</include>
				<aspectratio>scale</aspectratio>
				<texture colordiffuse="BFFFFFFF">special://skin/extras/themes/splash.png</texture>
			</control>
		</control>
	</controls>
</window>
