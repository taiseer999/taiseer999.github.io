				<width>100%</width>
				<top>160</top>
				<pagecontrol>60</pagecontrol>
				<onright>60</onright>
				<onleft>60</onleft>
				<include>SettingsPanel</include>
				<content>
					<item>
						<label>$LOCALIZE[20094]</label>
						<onclick>ActivateWindow(1120)</onclick>
