<?xml version="1.0" encoding="utf-8"?>
<window type="dialog" id="1112">
	<defaultcontrol always="true">111000</defaultcontrol>
	<include>Animation_DialogPopupOpenClose</include>
	<controls>
		<control type="group">
			<centerleft>50%</centerleft>
			<height>570</height>
			<centertop>50%</centertop>
			<width>700</width>
			<visible>!Window.IsActive(DialogSettings.xml) + !Window.IsActive(DialogSlider.xml) + !Window.IsActive(GameVideoFilter) + !Window.IsActive(GameStretchMode) + !Window.IsActive(GameControllers) + !Window.IsActive(GameVideoRotation)</visible>
			<animation effect="fade" time="200">VisibleChange</animation>
			<include content="DialogBackgroundCommons">
				<param name="width" value="700" />
				<param name="height" value="80" />
				<param name="header_label" value="$INFO[Window(home).Property(settingslist_Header)]" />
				<param name="header_id" value="1" />
			</include>
			<control type="group" id="111000">
				<left>0</left>
				<top>80</top>
				<control type="grouplist" id="111100">
					<visible>String.IsEqual(window(home).Property(settingslist_content),osd)</visible>
					<width>700</width>
					<height>490</height>
					<itemgap>0</itemgap>
					<onup>111000</onup>
					<ondown>111000</ondown>
					<orientation>vertical</orientation>
					<control type="button" id="111111">
						<width>700</width>
						<include>DialogSettingButton</include>
						<label>Original</label>
						<onclick>Action(vs10.original)</onclick>
						<onclick>Close</onclick>
					</control>
					<control type="button" id="111021">
						<width>700</width>
						<include>DialogSettingButton</include>
						<label>$INFO[Player.Process(video.source.hdr.type)] -&gt; SDR</label>
						<onclick>Action(vs10.sdr)</onclick>
						<visible>String.Contains(Player.Process(video.source.hdr.type),HDR10) | String.Contains(Player.Process(video.source.hdr.type),Dolby Vision) | String.Contains(Player.Process(video.source.hdr.type),HLG)</visible>
					</control>
					<control type="button" id="111031">
						<width>700</width>
						<include>DialogSettingButton</include>
						<label>$INFO[Player.Process(video.source.hdr.type)] -&gt; HDR10</label>
						<onclick>Action(vs10.hdr10)</onclick>
						<visible>String.Contains(Player.Process(video.source.hdr.type),SDR) | String.Contains(Player.Process(video.source.hdr.type),Dolby Vision)</visible>
					</control>
					<control type="button" id="111041">
						<width>700</width>
						<include>DialogSettingButton</include>
						<label>$INFO[Player.Process(video.source.hdr.type)] -&gt; Dolby Vision</label>
						<onclick>Action(vs10.dv)</onclick>
						<visible>String.Contains(Player.Process(video.source.hdr.type),SDR) | String.Contains(Player.Process(video.source.hdr.type),HDR10) | String.Contains(Player.Process(video.source.hdr.type),HLG)</visible>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>