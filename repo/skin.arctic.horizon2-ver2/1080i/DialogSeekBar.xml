<?xml version="1.0" encoding="UTF-8"?>
<window>
    <zorder>0</zorder>
    <visible>!Player.HasGame</visible>
    <visible>!Window.IsActive(DialogPlayerProcessInfo.xml)</visible>
    <visible>Window.IsActive(VideoFullScreen.xml) | Window.IsActive(MusicVisualisation.xml)</visible>
    <visible>Window.IsActive(videoosd) | Window.IsActive(musicosd) | $EXP[Exp_PlayerCaching] | $EXP[Exp_PlayerShowInfo] | Player.Seeking | $EXP[Exp_PlayerDisplayAfterSeek] | [$EXP[Exp_PlayerPaused] + [!$EXP[Exp_SystemIdleTime3] | !Skin.HasSetting(OSD.AutoHideOnPause)]] | $EXP[Exp_PlayerForwarding] | $EXP[Exp_PlayerRewinding] | Window.IsActive(DialogFullScreenInfo.xml) | !String.IsEmpty(Window(Home).Property(OSDInfo)) | !$EXP[Exp_StringIsEmpty_PlayerSeekNumeric] | !$EXP[Exp_StringIsEmpty_PVRChannelNumberInput] | Window.IsVisible(script-cu-lrclyrics-main.xml)</visible>
    <visible>!Window.IsVisible(DialogSlider.xml)</visible>
    <visible>!Window.IsVisible(DialogPVRChannelsOSD.xml)</visible>
    <visible>!Window.IsVisible(script-tmdbhelper-wikipedia.xml)</visible>
    <include>Animation_Fullscreen_Media</include>

    <onload condition="$EXP[Exp_PlayerPaused] + !String.IsEmpty(Window(Home).Property(OSDExtendedInfo))">PlayerControl(Play)</onload>
    <onload condition="$EXP[Exp_PlayerPaused] + !String.IsEmpty(Window(Home).Property(OSDExtendedInfo))">ClearProperty(OSDExtendedInfo,Home)</onload>
    <controls>

        <control type="image">
            <texture colordiffuse="7f000000">common/white.png</texture>
            <visible>[!String.IsEmpty(Window(Home).Property(OSDArtistDetails)) + !Window.IsVisible(1142)] | Window.IsVisible(script-cu-lrclyrics-main.xml)</visible>
            <include>Animation_FadeIn_Delay</include>
            <include>Animation_FadeOut</include>
        </control>

        <control type="image">
            <texture colordiffuse="panel_bg">background/floor.png</texture>
            <visible>$EXP[Exp_OSD_ExpandInfo]</visible>
            <include>Animation_FadeIn_Delay</include>
            <include>Animation_FadeOut</include>
        </control>

        <control type="image">
            <texture colordiffuse="panel_bg">background/floor.png</texture>
            <visible>!$EXP[Exp_OSD_PVRChannelSwitch]</visible>
            <animation effect="fade" start="0" end="100" delay="300" time="300">VisibleChange</animation>
        </control>

        <include condition="$EXP[Exp_VideoPlayerContentLiveTV]">OSD_PVRChannelSwitch</include>

        <!-- Video Seekbar -->
        <include condition="$EXP[Exp_VideoPlayerIsFullscreen]">OSD_VideoSeekBar</include>


        <!-- Music Seekbar -->
        <include condition="!$EXP[Exp_VideoPlayerIsFullscreen]">OSD_MusicSeekBar</include>

        <!-- Clock -->
        <include content="Object_ShadowSpot" condition="!$EXP[Exp_FurnitureDisableRightHeader]">
            <include>Dimension_ClockShadow</include>
        </include>
        <include content="Furniture_Top_Right">
            <param name="icon">$VAR[Image_MuteBug_Seekbar]</param>
        </include>

        <!-- Top Label Lyrics -->
        <control type="group">
            <visible>Window.IsVisible(script-cu-lrclyrics-main.xml) | [!String.IsEmpty(Window(Home).Property(OSDArtistDetails)) + !Window.IsVisible(1142)]</visible>
            <include>Animation_FadeIn_Delay</include>
            <include>Animation_FadeOut</include>
            <include content="Furniture_Top_Left">
                <param name="label">$LOCALIZE[31244]</param>
            </include>
        </control>

    </controls>
</window>