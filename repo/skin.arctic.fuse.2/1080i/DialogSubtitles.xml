<?xml version="1.0" encoding="UTF-8"?>
<window>
    <zorder>2</zorder>
    <defaultcontrol always="true">9001</defaultcontrol>
    <include content="Action_OSD_SuspendAutoClose">
        <param name="window">DialogSubtitles.xml</param>
    </include>
    <controls>

        <control type="label" id="140" description="Textbox">
            <visible>false</visible>
        </control>

        <include>Dialog_Dim_Overlay</include>

        <control type="group">
            <include>Dimension_DialogMainMenu</include>
            <include>Animation_Right_Delay</include>

            <include content="Dialog_Background_Group">
                <param name="dialog_size">Dimension_DialogMainMenu</param>
            </include>

            <control type="group">
                <include content="Dimension_Padding">
                    <param name="pad">40</param>
                </include>
                <include content="Dialog_Overlay_Mode_Glass">
                    <param name="flipped">false</param>
                </include>
            </control>

            <control type="group">
                <!-- Header -->
                <include content="Dialog_Head">
                    <param name="id">100</param>
                </include>
                <include>Dialog_Head_CloseButton</include>

                <!-- Content -->
                <control type="group" id="8000">
                    <bottom>240</bottom>
                    <include>Dimension_Dialog_Body</include>
                    <control type="group">
                        <left>settings_category_w</left>
                        <include content="Dialog_Outline_InnerBox">
                            <left>40</left>
                            <right>40</right>
                            <control type="group">
                                <include>Dimension_Dialog_Body_Group</include>
                                <include content="List_DialogSelect">
                                    <param name="id">120</param>
                                    <param name="itemlayout_include">Layout_DialogSubtitles</param>
                                    <param name="item_height">128</param>
                                    <param name="textcolor">dialog_fg</param>
                                    <onleft>150</onleft>
                                    <onright>61</onright>
                                    <pagecontrol>61</pagecontrol>
                                    <onback>9000</onback>
                                </include>
                            </control>
                        </include>
                    </control>

                    <control type="group">
                        <include>Dimension_Dialog_Body_Group</include>

                        <control type="group">
                            <width>settings_category_w</width>

                            <control type="group">
                                <right>20</right>
                                <left>20</left>
                                <top>-20</top>
                                <bottom>-20</bottom>
                                <control type="image">
                                    <top>0</top>
                                    <height>1</height>
                                    <texture colordiffuse="$VAR[Color_DialogBorder]">common/white.png</texture>
                                    <right>$PARAM[lines_right]</right>
                                </control>
                                <control type="image">
                                    <bottom>0</bottom>
                                    <height>1</height>
                                    <texture colordiffuse="$VAR[Color_DialogBorder]">common/white.png</texture>
                                    <right>$PARAM[lines_right]</right>
                                </control>
                            </control>

                            <include content="List_DialogSelect">
                                <param name="id">150</param>
                                <param name="textcolor">dialog_fg</param>
                                <onright>120</onright>
                                <onback>9000</onback>
                            </include>

                            <control type="image" id="110" description="Service Logo">
                                <height>dialog_button_w</height>
                                <bottom>0</bottom>
                                <aspectratio aligny="bottom">keep</aspectratio>
                            </control>

                            <control type="label" id="130" description="Textbox">
                                <height>40</height>
                                <font>font_tiny</font>
                                <align>center</align>
                                <top>-40</top>
                                <textcolor>dialog_fg_70</textcolor>
                            </control>
                        </control>
                    </control>

                    <include content="Dialog_Scrollbar">
                        <param name="id">61</param>
                        <param name="inset">true</param>
                        <onleft>120</onleft>
                        <onback>9000</onback>
                    </include>

                    <include content="Dialog_InfoText">
                        <param name="label">$INFO[Player.FileName]$INFO[Control.GetLabel(140),[CR],]</param>
                    </include>


                </control>

                <!-- Buttons -->
                <include content="Dialog_Tray_Grouplist_Left">
                    <include content="Dialog_Button_Expanded">
                        <param name="id">01</param>
                        <param name="label">$LOCALIZE[186]</param>
                        <param name="icon">special://skin/extras/icons/circle-check.png</param>
                        <onclick>Close</onclick>
                    </include>
                    <include content="Dialog_Button_Expanded">
                        <param name="id">02</param>
                        <param name="label">$LOCALIZE[222]</param>
                        <param name="icon">special://skin/extras/icons/circle-xmark.png</param>
                        <onclick>Close</onclick>
                    </include>
                </include>
                <include content="Dialog_Tray_Grouplist_Right">
                    <include content="Dialog_Button_Expansion">
                        <param name="id">160</param>
                        <param name="label">$LOCALIZE[413]</param>
                        <param name="builtin">true</param>
                        <param name="icon">special://skin/extras/icons/circle-plus.png</param>
                    </include>
                </include>

            </control>

        </control>


    </controls>
</window>
