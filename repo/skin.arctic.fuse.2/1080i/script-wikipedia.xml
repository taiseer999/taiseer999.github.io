<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog">
    <defaultcontrol always="true">9902</defaultcontrol>
    <onunload condition="Player.Paused + !String.IsEmpty(Window(Home).Property(OSDExtendedInfo))">PlayerControl(Play)</onunload>
    <onunload condition="Player.Paused + !String.IsEmpty(Window(Home).Property(OSDExtendedInfo))">ClearProperty(OSDExtendedInfo,Home)</onunload>
    <onload>SetProperty(TMDbHelper.ContextMenu,True)</onload>
    <controls>

        <!-- <include content="Dialog_Dim_Overlay">
            <param name="visible">Control.HasFocus(9902)</param>
        </include> -->

        <include>Dialog_Dim_Overlay</include>

        <control type="group">
            <include>Dimension_DialogHugeMenu</include>
            <include>Animation_Right_Delay</include>

            <include content="Dialog_Foreground_Side">
                <param name="dialog_size">Dimension_DialogHugeMenu</param>
                <param name="topline">false</param>
                <param name="subline">false</param>
            </include>

            <!-- Header -->
            <include content="Dialog_Head">
                <param name="id">9901</param>
                <param name="sublabel">Wikipedia</param>
                <param name="sublabel_include">true</param>
            </include>
            <include>Dialog_Head_CloseButton</include>

            <!-- Content -->
            <control type="group">
                <bottom>160</bottom>
                <include>Dimension_Dialog_Body</include>

                <control type="group">
                    <include>Dimension_Dialog_Body_Group</include>
                    <include content="List_DialogSelect">
                        <param name="id">9902</param>
                        <onright>61</onright>
                        <width>settings_category_w</width>
                    </include>

                    <control type="group">
                        <width>settings_category_w</width>
                        <control type="group">
                            <top>-20</top>
                            <bottom>-20</bottom>
                            <left>20</left>
                            <right>20</right>
                            <control type="image">
                                <height>1</height>
                                <texture colordiffuse="$VAR[Color_DialogBorder]">common/white.png</texture>
                            </control>
                            <control type="image">
                                <bottom>0</bottom>
                                <height>1</height>
                                <texture colordiffuse="$VAR[Color_DialogBorder]">common/white.png</texture>
                            </control>
                        </control>
                    </control>

                    <control type="group">
                        <left>settings_category_w</left>
                        <include content="Dialog_Outline_InnerBox">
                            <top>-20</top>
                            <bottom>-20</bottom>
                            <left>20</left>
                            <right>20</right>
                            <control type="group">
                                <include content="Dimension_Padding">
                                    <param name="pad">40</param>
                                </include>

                                <control type="group">
                                    <!-- <right>240</right> -->
                                    <control type="textbox" id="9903">
                                        <align>left</align>
                                        <textcolor>main_fg_70</textcolor>
                                        <font>font_main_plot</font>
                                        <pagecontrol>61</pagecontrol>
                                        <autoscroll delay="8000" time="4000" repeat="12000">!Control.HasFocus(61)</autoscroll>
                                        <!-- <right>40</right> -->
                                        <visible>!Control.HasFocus(9061)</visible>
                                    </control>
                                    <control type="group">
                                        <right>0</right>
                                        <visible>Control.HasFocus(9061)</visible>
                                        <visible>!String.IsEmpty(Window.Property(Image))</visible>
                                        <control type="image">
                                            <aspectratio align="center" aligny="top">keep</aspectratio>
                                            <texture background="true">$INFO[Window.Property(Image)]</texture>
                                            <bottom>160</bottom>
                                        </control>
                                        <control type="textbox">
                                            <aligny>center</aligny>
                                            <align>center</align>
                                            <height>160</height>
                                            <bottom>0</bottom>
                                            <textcolor>main_fg_70</textcolor>
                                            <font>font_main_plot</font>
                                            <label>$INFO[Window.Property(ImageText)]</label>
                                        </control>
                                    </control>
                                </control>

                                <!-- <control type="group">
                                    <right>0</right>
                                    <width>240</width>
                                    <top>0</top>
                                    <visible>!String.IsEmpty(Window.Property(Image))</visible>
                                    <control type="image">
                                        <aspectratio align="center" aligny="top">keep</aspectratio>
                                        <texture background="true">$INFO[Window.Property(Image)]</texture>
                                        <bottom>160</bottom>
                                    </control>
                                    <control type="textbox">
                                        <aligny>center</aligny>
                                        <align>center</align>
                                        <height>110</height>
                                        <bottom>0</bottom>
                                        <textcolor>main_fg_70</textcolor>
                                        <font>font_tiny</font>
                                        <label>$INFO[Window.Property(ImageText)]</label>
                                    </control>
                                </control> -->
                            </control>
                        </include>
                    </control>
                </control>

                <control type="group">
                    <right>40</right>
                    <include content="Dialog_InfoText">
                        <param name="label">$INFO[Control.GetLabel(9904)]</param>
                        <param name="include_hintlabel">false</param>
                    </include>
                    <control type="image" id="9905">
                        <width>200</width>
                        <height>40</height>
                        <centerbottom>-60</centerbottom>
                        <right>0</right>
                        <aspectratio align="right">keep</aspectratio>
                    </control>
                </control>


                <include content="Object_Hidden_Button">
                    <param name="id">9061</param>
                    <onleft>61</onleft>
                    <onup>61</onup>
                    <ondown>61</ondown>
                    <onback>61</onback>
                    <onclick>SetFocus(61)</onclick>
                </include>

                <include content="Dialog_Scrollbar">
                    <param name="id">61</param>
                    <param name="inset">true</param>
                    <onleft>9902</onleft>
                    <onright condition="!String.IsEmpty(Window.Property(Image))">9061</onright>
                </include>
            </control>
        </control>



        <include content="Object_Hidden_Button">
            <param name="id">9904</param>
            <param name="control">textbox</param>
        </include>

    </controls>
</window>