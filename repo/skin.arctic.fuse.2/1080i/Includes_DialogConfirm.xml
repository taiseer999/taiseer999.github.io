<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="Dialog_Confirm_Header">
        <include content="Dialog_Head">
            <param name="top">40</param>
            <param name="left">40</param>
            <param name="id">$PARAM[id]</param>
            <param name="label">$PARAM[label]</param>
        </include>
    </include>

    <include name="Dialog_Confirm_Textbox">
        <param name="id">9</param>
        <definition>
            <control type="textbox" id="$PARAM[id]">
                <top>0</top>
                <bottom>0</bottom>
                <font>font_main_plot</font>
                <textcolor>dialog_fg_70</textcolor>
                <label>$PARAM[label]</label>
            </control>
        </definition>
    </include>

    <include name="Dialog_Confirm_Progress">
        <control type="group">
            <bottom>-46</bottom>
            <height>12</height>
            <control type="progress" id="20">
                <description>Progressbar</description>
                <info>System.Progressbar</info>
                <texturebg colordiffuse="00ffffff" border="12,0,12,0">progress/progress-nib.png</texturebg>
            </control>
            <control type="progress">
                <description>Progressbar</description>
                <info>System.Progressbar</info>
                <texturebg colordiffuse="00ffffff" border="12,0,12,0">progress/progress-bg.png</texturebg>
                <midtexture colordiffuse="$VAR[ColorGradient]" border="12,0,12,0" diffuse="progress/diffuse.png">progress/progress-bg.png</midtexture>
                <include content="Defs_Progress_Colorfade">
                    <param name="id">20</param>
                </include>
            </control>
        </control>
    </include>

    <include name="Dialog_Confirm_Buttons">
        <include content="Dialog_Tray_Grouplist">
            <include content="Dialog_Button_Expanded">
                <param name="id">11</param>
                <param name="builtin">true</param>
                <param name="icon">$VAR[Image_DialogConfirm_11]</param>
            </include>
            <include content="Dialog_Button_Expanded">
                <param name="id">10</param>
                <param name="builtin">true</param>
                <param name="icon">$VAR[Image_DialogConfirm_10]</param>
            </include>
            <include content="Dialog_Button_Expanded">
                <param name="id">12</param>
                <param name="builtin">true</param>
                <param name="icon">$VAR[Image_DialogConfirm_12]</param>
            </include>
        </include>
    </include>

    <include name="Dialog_Confirm">
        <param name="include_header">Dialog_Confirm_Header</param>
        <param name="include_textbox">Dialog_Confirm_Textbox</param>
        <param name="include_progress">Dialog_Confirm_Progress</param>
        <param name="include_buttons">Dialog_Confirm_Buttons</param>
        <param name="include_dimensions">Dimension_DialogConfirm</param>
        <param name="include_animation">Animation_SlideIn_Dialog</param>
        <param name="visible">true</param>
        <definition>
            <include content="Dialog_Dim_Overlay">
                <param name="visible">$PARAM[visible]</param>
            </include>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <include>$PARAM[include_animation]</include>
                <control type="group">
                    <include>$PARAM[include_dimensions]</include>
                    <include content="Dialog_Background_Group">
                        <param name="include_glass">true</param>
                        <param name="dialog_size">$PARAM[include_dimensions]</param>
                    </include>
                    <include>Dialog_Overlay_Tray</include>
                    <control type="group">
                        <include>Dialog_Group</include>
                        <include>$PARAM[include_header]</include>
                        <control type="group">
                            <control type="image">
                                <top>120</top>
                                <height>1</height>
                                <texture colordiffuse="$VAR[Color_DialogBorder]">common/white.png</texture>
                                <left>40</left>
                                <right>40</right>
                            </control>
                            <control type="group">
                                <include content="Dialog_Group">
                                    <param name="top">160</param>
                                    <param name="bottom">160</param>
                                </include>
                                <include>$PARAM[include_textbox]</include>
                                <include>$PARAM[include_progress]</include>
                            </control>
                        </control>


                    </control>
                    <include>$PARAM[include_buttons]</include>
                </control>
            </control>
        </definition>
    </include>

    <include name="Dialog_Confirm_Side">
        <include content="Object_Hidden_Button">
            <param name="id">10</param>
            <onfocus>SetFocus(9010)</onfocus>
        </include>
        <include content="Object_Hidden_Button">
            <param name="id">11</param>
            <onfocus>SetFocus(9011)</onfocus>
        </include>
        <include content="Object_Hidden_Button">
            <param name="id">12</param>
            <onfocus>SetFocus(9012)</onfocus>
        </include>


        <include>Dialog_Dim_Overlay</include>

        <control type="group">
            <include>Animation_Right_Delay</include>

            <include>Dimension_DialogSideMenu</include>
            <include content="Dialog_Foreground_Side">
                <param name="dialog_size">Dimension_DialogSideMenu</param>
                <param name="lines_right">0</param>
                <param name="topline">true</param>
                <param name="subline">true</param>
            </include>

            <control type="group">
                <include content="Dialog_Head">
                    <param name="id">9999</param>
                    <param name="label">$VAR[Label_DialogConfirm_Heading]</param>
                </include>
                <include>Dialog_Head_CloseButton</include>

                <!-- Content -->
                <control type="group">
                    <include>Dimension_Dialog_Body</include>

                    <control type="group" id="7000">
                        <include>Dimension_Dialog_Body_Group</include>

                        <control type="grouplist">
                            <top>0</top>
                            <bottom>280</bottom>
                            <orientation>vertical</orientation>
                            <left>20</left>
                            <right>20</right>
                            <itemgap>20</itemgap>

                            <control type="textbox" id="1">
                                <font>font_midi_bold</font>
                                <textcolor>dialog_fg_90</textcolor>
                                <height min="80">auto</height>
                                <aligny>center</aligny>
                            </control>

                            <control type="textbox" id="9">
                                <font>font_main_plot</font>
                                <textcolor>dialog_fg_70</textcolor>
                                <height>auto</height>
                            </control>
                        </control>

                        <control type="group">
                            <bottom>0</bottom>
                            <height>130</height>
                            <control type="image">
                                <visible>Control.IsVisible(20)</visible>
                                <texture colordiffuse="$VAR[Color_DialogBorder]" border="40">common/menu.png</texture>
                            </control>
                            <control type="progress" id="20">
                                <description>Progressbar</description>
                                <info>System.Progressbar</info>
                                <texturebg colordiffuse="00ffffff" border="40,0,40,0">common/menu.png</texturebg>
                                <midtexture colordiffuse="$VAR[ColorHighlight]" border="100,40,100,40">common/menu.png</midtexture>
                            </control>
                            <control type="progress">
                                <visible>Control.IsVisible(20)</visible>
                                <description>Progressbar</description>
                                <info>System.Progressbar</info>
                                <texturebg colordiffuse="00ffffff" border="40,0,40,0">common/menu.png</texturebg>
                                <midtexture colordiffuse="$VAR[ColorGradient]" border="100,40,100,40" diffuse="progress/diffuse.png">common/menu.png</midtexture>
                                <include content="Defs_Progress_Colorfade">
                                    <param name="id">20</param>
                                </include>
                            </control>
                        </control>

                        <control type="image">
                            <left>20</left>
                            <right>20</right>
                            <bottom>150</bottom>
                            <height>1</height>
                            <texture colordiffuse="$VAR[Color_DialogBorder]">common/white.png</texture>
                        </control>

                        <control type="grouplist">
                            <orientation>horizontal</orientation>
                            <itemgap>20</itemgap>
                            <height>130</height>
                            <bottom>0</bottom>

                            <visible>Control.IsVisible(12)</visible>
                            <visible>Control.IsVisible(11)</visible>
                            <visible>Control.IsVisible(10)</visible>

                            <include content="Dialog_Special_Button">
                                <param name="id">9011</param>
                                <param name="sublabel">$INFO[Control.GetLabel(11)]</param>
                                <param name="icon">$VAR[Image_DialogConfirm_11]</param>
                                <param name="icon_bordersize">4</param>
                                <param name="icon_withtext">true</param>
                                <control type="button" id="9011">
                                    <include>defs_dialog_button</include>
                                    <onclick>SendClick(11)</onclick>
                                    <onright>9010</onright>
                                </control>
                                <width>200</width>
                            </include>

                            <include content="Dialog_Special_Button">
                                <param name="id">9010</param>
                                <param name="sublabel">$INFO[Control.GetLabel(10)]</param>
                                <param name="icon">$VAR[Image_DialogConfirm_10]</param>
                                <param name="icon_bordersize">4</param>
                                <param name="icon_withtext">true</param>
                                <control type="button" id="9010">
                                    <include>defs_dialog_button</include>
                                    <onclick>SendClick(10)</onclick>
                                    <onleft>9011</onleft>
                                    <onright>9012</onright>
                                </control>
                                <width>200</width>
                            </include>

                            <include content="Dialog_Special_Button">
                                <param name="id">9012</param>
                                <param name="sublabel">$INFO[Control.GetLabel(12)]</param>
                                <param name="icon">$VAR[Image_DialogConfirm_12]</param>
                                <param name="icon_bordersize">4</param>
                                <param name="icon_withtext">true</param>
                                <control type="button" id="9012">
                                    <include>defs_dialog_button</include>
                                    <onclick>SendClick(12)</onclick>
                                    <onleft>9010</onleft>
                                </control>
                                <width>200</width>
                            </include>
                        </control>

                        <control type="grouplist">
                            <orientation>horizontal</orientation>
                            <itemgap>20</itemgap>
                            <height>130</height>
                            <bottom>0</bottom>

                            <visible>!Control.IsVisible(12)</visible>
                            <visible>Control.IsVisible(11)</visible>
                            <visible>Control.IsVisible(10)</visible>

                            <include content="Dialog_Special_Button">
                                <param name="id">9011</param>
                                <param name="sublabel">$INFO[Control.GetLabel(11)]</param>
                                <param name="icon">$VAR[Image_DialogConfirm_11]</param>
                                <param name="icon_bordersize">4</param>
                                <param name="icon_withtext">true</param>
                                <control type="button" id="9011">
                                    <include>defs_dialog_button</include>
                                    <onclick>SendClick(11)</onclick>
                                    <onright>9010</onright>
                                </control>
                                <width>310</width>
                            </include>

                            <include content="Dialog_Special_Button">
                                <param name="id">9010</param>
                                <param name="sublabel">$INFO[Control.GetLabel(10)]</param>
                                <param name="icon">$VAR[Image_DialogConfirm_10]</param>
                                <param name="icon_bordersize">4</param>
                                <param name="icon_withtext">true</param>
                                <control type="button" id="9010">
                                    <include>defs_dialog_button</include>
                                    <onclick>SendClick(10)</onclick>
                                    <onleft>9011</onleft>
                                </control>
                                <width>310</width>
                            </include>

                        </control>

                        <control type="grouplist">
                            <orientation>horizontal</orientation>
                            <itemgap>20</itemgap>
                            <height>130</height>
                            <bottom>0</bottom>

                            <visible>!Control.IsVisible(12)</visible>
                            <visible>!Control.IsVisible(11)</visible>
                            <visible>Control.IsVisible(10)</visible>

                            <include content="Dialog_Special_Button">
                                <param name="id">9010</param>
                                <param name="sublabel">$INFO[Control.GetLabel(10)]</param>
                                <param name="icon">$VAR[Image_DialogConfirm_10]</param>
                                <param name="icon_bordersize">4</param>
                                <param name="icon_withtext">true</param>
                                <control type="button" id="9010">
                                    <include>defs_dialog_button</include>
                                    <onclick>SendClick(10)</onclick>
                                    <include content="Animation_ConditionalFade">
                                        <param name="condition">Control.IsVisible(20)</param>
                                    </include>
                                </control>
                                <width>640</width>
                            </include>

                        </control>

                        <control type="grouplist">
                            <orientation>horizontal</orientation>
                            <itemgap>20</itemgap>
                            <height>130</height>
                            <bottom>0</bottom>

                            <visible>!Control.IsVisible(12)</visible>
                            <visible>Control.IsVisible(11)</visible>
                            <visible>!Control.IsVisible(10)</visible>

                            <include content="Dialog_Special_Button">
                                <param name="id">9011</param>
                                <param name="sublabel">$INFO[Control.GetLabel(11)]</param>
                                <param name="icon">$VAR[Image_DialogConfirm_11]</param>
                                <param name="icon_bordersize">4</param>
                                <param name="icon_withtext">true</param>
                                <control type="button" id="9011">
                                    <include>defs_dialog_button</include>
                                    <onclick>SendClick(11)</onclick>
                                    <include content="Animation_ConditionalFade">
                                        <param name="condition">Control.IsVisible(20)</param>
                                    </include>
                                </control>
                                <width>640</width>
                            </include>

                        </control>
                    </control>
                </control>
            </control>
        </control>
    </include>
</includes>
