            <param name="onclick">SendClick(20)</param>
        </include>
    </include>

    <include name="Dialog_Manage_Head_Button">
        <param name="onclick">SetFocus(9898)</param>
        <definition>
            <include content="Dialog_Head_CloseButton">
                <param name="id">$PARAM[id]</param>
                <param name="groupid">$PARAM[groupid]</param>
                <param name="icon">special://skin/extras/icons/sliders.png</param>
                <param name="onmove">$PARAM[onmove]</param>
