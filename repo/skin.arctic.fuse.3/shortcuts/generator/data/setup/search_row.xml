<contents>
    <value name="widget_id">$MATH[500 + {item_x} + 2]</value>
    <value name="widget_group_id">$MATH[700 + {item_x} + 2]</value>
    <value name="widget_label">{item_label}</value>
    <value name="widget_sortby">{item_widget_sortby}</value>
    <value name="widget_limit">{item_widget_limit}</value>
    <value name="widget_visible">[String.IsEqual(Container(601).ListItem.Property(guid),{item_guid}) | String.IsEmpty(Container(601).ListItem.Property(guid)) | Skin.HasSetting(Search.DisableCombined)]</value>
    <value name="widget_altvisible">[!String.IsEmpty(Control.GetLabel(300).index(1)) + [Control.HasFocus(300) | Control.HasFocus(305)] + System.IdleTime(1) + !System.IdleTime(2)]</value>
    <value name="widget_guid">{item_guid}</value>
    <rules name="widget_sortorder">
        <rule>
            <condition>{item_widget_sortorder}==True</condition>
            <value>descending</value>
        </rule>
        <rule>
            <condition>True</condition>
            <value>ascending</value>
        </rule>
    </rules>
    <rules name="widget_isautoscroll">
        <rule>
            <condition>{item_widget_autoscroll}==True</condition>
            <value>True</value>
        </rule>
        <rule>
            <condition>True</condition>
            <value>False</value>
        </rule>
    </rules>
</contents>