<item>
    <label>{widget_label}</label>
    <property name="guid">{widget_guid}</property>
    <property name="widget_id">$NUMBER[{widget_id}]</property>
    <property name="show_overlay">{show_overlay}</property>
    <property name="hide_overlay">{hide_overlay}</property>
    <onclick>ActivateWindow({widget_target},{widget_path},return)</onclick>
    <visible>!Integer.IsEqual(Container({widget_id}).NumItems,0) | Container({widget_id}).IsUpdating</visible>
</item>