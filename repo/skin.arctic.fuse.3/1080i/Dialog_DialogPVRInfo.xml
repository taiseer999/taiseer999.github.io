                    <control type="group">
                        <!-- <include>Size_RightGroup_Large</include>
                        <include>Size_Group_AddonSettings_Middle</include>
                        <include>Part_Panel_Middle</include> -->
                        <include>Size_LeftGroup_Main</include>
                        <control type="group">
