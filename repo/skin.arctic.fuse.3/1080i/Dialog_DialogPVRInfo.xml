    <include name="DialogPVRInfo_Items">
        <definition>
            <include content="Button_Dialog" description="Switch">
                <param name="groupid">9205</param>
                <param name="id">05</param>
                <param name="icon">special://skin/extras/icons/play2.png</param>
                <label>$LOCALIZE[19165]</label>
                <visible>Window.IsActive(PVRGuideInfo) + Control.IsEnabled(5) + Control.IsVisible(5)</visible>
            </include>

            <include content="Button_Dialog" description="Play Programme">
                <param name="groupid">9220</param>
                <param name="id">10</param>
                <param name="icon">special://skin/extras/icons/play3.png</param>
                <label>$LOCALIZE[208]</label>
                <visible>Window.IsActive(PVRGuideInfo) + Control.IsEnabled(10) + Control.IsVisible(10)</visible>
            </include>

            <include content="Button_Dialog" description="Play Recording">
                <param name="groupid">9221</param>
                <param name="id">08</param>
                <param name="icon">special://skin/extras/icons/play3.png</param>
                <label>$LOCALIZE[208]</label>
                <visible>[Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo)] + Control.IsEnabled(8) + Control.IsVisible(8)</visible>
            </include>

            <include content="Button_Dialog" description="Record">
                <param name="groupid">9222</param>
                <param name="id">06</param>
                <param name="icon">special://skin/extras/icons/record-vinyl.png</param>
                <label>$LOCALIZE[264]</label>
                <visible>Window.IsActive(PVRGuideInfo) + Control.IsEnabled(6) + Control.IsVisible(6)</visible>
            </include>

            <include content="Button_Dialog" description="Add Timer">
                <param name="groupid">9223</param>
                <param name="id">09</param>
                <param name="icon">special://skin/extras/icons/clock.png</param>
                <label>$LOCALIZE[19061]</label>
                <visible>Window.IsActive(PVRGuideInfo) + Control.IsEnabled(9) + Control.IsVisible(9)</visible>
            </include>

            <include content="Button_Dialog" description="Set Reminder">
                <param name="groupid">9224</param>
                <param name="id">11</param>
                <param name="icon">special://skin/extras/icons/clock.png</param>
                <label>$LOCALIZE[826]</label>
                <visible>Window.IsActive(PVRGuideInfo) + Control.IsEnabled(11) + Control.IsVisible(11)</visible>
            </include>

            <include content="Button_Dialog" description="Similar">
                <param name="groupid">9225</param>
                <param name="id">04</param>
                <param name="icon">special://skin/extras/icons/binoculars.png</param>
                <label>$LOCALIZE[31041]</label>
                <visible>[Window.IsActive(PVRGuideInfo) | Window.IsActive(PVRRecordingInfo)] + Control.IsEnabled(4) + Control.IsVisible(4)</visible>
            </include>

            <include content="Button_Dialog">
                <param name="groupid">9226</param>
                <param name="id">9026</param>
                <param name="icon">special://skin/extras/icons/globe.png</param>
                <label>Wiki</label>
                <onclick>Close</onclick>
                <onclick>runscript(script.wikipedia,wikipedia=$VAR[Path_Wikipedia_Title],tmdb_type=$VAR[Path_Wikipedia_Type])</onclick>
            </include>

            <include content="Button_Dialog">
                <param name="groupid">9227</param>
                <param name="id">9027</param>
                <param name="icon">special://skin/extras/icons/info2.png</param>
                <label>$LOCALIZE[14116]</label>
                <onclick>Close</onclick>
                <onclick>Skin.SetString(InfoPanel.FullSwitch,Full,Home)</onclick>
                <onclick>RunScript(plugin.video.themoviedb.helper,add_tmdb=$INFO[Window(Home).Property(TMDBHelper.ListItem.Monitor.TMDb_ID)],tmdb_type=$INFO[Window(Home).Property(TMDBHelper.ListItem.Monitor.TMDb_Type)],call_auto=1190,return)</onclick>
                <visible>!String.IsEmpty(Window(Home).Property(TMDBHelper.ListItem.Monitor.TMDb_ID))</visible>
                <visible>String.IsEmpty(Window(Home).Property(TMDBHelper.IsUpdating))</visible>
            </include>

