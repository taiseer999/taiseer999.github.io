                <control type="group">
                    <left>$PARAM[channelwidth]</left>

                    <control type="group">
                        <left>20</left>
                        <right>-20</right>
                        <bottom>-15</bottom>
                        <top>5</top>
                        <control type="group">
                            <control type="image">
                                <width>1</width>
                                <texture colordiffuse="main_fg_30">common/white.png</texture>
                                <bottom>15</bottom>
                                <top>15</top>
                            </control>
                            <control type="label">
                                <bottom>5</bottom>
                                <left>10</left>
                                <width>$PARAM[channelwidth]</width>
                                <align>left</align>
                                <aligny>center</aligny>
                                <font>font_tiny</font>
                                <label>$LOCALIZE[19030]</label>
                                <textcolor>main_fg_70</textcolor>
                                <shadowcolor>main_bg_12</shadowcolor>
                            </control>
                        </control>

                        <control type="group">
                            <left>50%</left>
                            <control type="image">
                                <width>1</width>
                                <texture colordiffuse="main_fg_30">common/white.png</texture>
                                <bottom>15</bottom>
                                <top>15</top>
                            </control>
                            <control type="label">
                                <bottom>5</bottom>
                                <left>10</left>
                                <width>$PARAM[channelwidth]</width>
                                <align>left</align>
                                <aligny>center</aligny>
                                <font>font_tiny</font>
                                <label>$LOCALIZE[19031]</label>
                                <textcolor>main_fg_70</textcolor>
                                <shadowcolor>main_bg_12</shadowcolor>
                            </control>
                        </control>

                    </control>
                </control>
            </control>

            <control type="fixedlist" id="$PARAM[id]">
                <top>60</top>
                <bottom>99</bottom>
                <left>-40</left>
                <orientation>vertical</orientation>
                <focusposition>$PARAM[focusposition]</focusposition>
                <movement>$PARAM[movement]</movement>

                <onright>ActivateWindow(1171)</onright>

                <viewtype label="$PARAM[viewtype_label]">list</viewtype>
                <onfocus condition="$PARAM[overlay]">SetProperty(Background.ShowOverlay,True,Home)</onfocus>
                <onfocus condition="![$PARAM[overlay]]">ClearProperty(Background.ShowOverlay,Home)</onfocus>

                <itemlayout height="$PARAM[channelheight]">
                    <include content="Layout_PVRChannel">
                        <param name="channelwidth">$PARAM[channelwidth]</param>
                        <param name="detailed">$PARAM[detailed]</param>
                    </include>
                </itemlayout>
                <focusedlayout height="$PARAM[channelheight]">
                    <control type="group">
                        <visible>[$EXP[Exp_PVRGuide_NoFocus]]</visible>
                        <include content="Layout_PVRChannel">
                            <param name="channelwidth">$PARAM[channelwidth]</param>
                            <param name="detailed">$PARAM[detailed]</param>
                            <param name="selected">false</param>
                        </include>
                    </control>
                    <control type="group">
                        <visible>![$EXP[Exp_PVRGuide_NoFocus]]</visible>
                        <include content="Layout_PVRChannel">
                            <param name="channelwidth">$PARAM[channelwidth]</param>
                            <param name="detailed">$PARAM[detailed]</param>
                            <param name="selected">true</param>
                        </include>
                    </control>
                </focusedlayout>
            </control>
        </definition>
    </include>

