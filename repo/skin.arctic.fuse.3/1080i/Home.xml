<?xml version="1.0" encoding="UTF-8"?>
<window>
    <onload>RunScript(script.skinvariables,run_executebuiltin=special://skin/shortcuts/skinvariables-splash.json,use_rules=True)</onload>
    <include>Action_BuildViews</include>
    <onload>Skin.SetString(TMDbHelper.Corner.Radius,20)</onload>
    <onload>Skin.SetString(TMDbHelper.UseLocalWindowIDs,10000|11101|11102|11103|11104|11105|11106|11107|11108|11109)</onload>
    <include>Action_ButtonMenu_Onload</include>
    <include>Action_BuildShortcuts_OnLoad</include>

    <include content="Hub_Onload">
        <param name="window_id">Home</param>
    </include>

    <onload condition="!Skin.HasSetting(Home.FirstRun)">Skin.SetBool(Hub.Home.DisableSubmenu)</onload>
    <onload condition="!Skin.HasSetting(Home.FirstRun)">Skin.SetString(Shortcuts.RebuildDateTime,FirstRun)</onload>
    <onload condition="!Skin.HasSetting(Home.FirstRun)">Skin.SetBool(Home.FirstRun)</onload>
    <onload condition="!Skin.HasSetting(Home.FirstRun)">AlarmClock(reloadskin,ReloadSkin(),00:00,silent)</onload>

    <onload>$VAR[Action_RatingsMonitor]</onload>

    <onload condition="Skin.HasSetting(Home.FirstRun) + String.IsEmpty(Window(1198).Property(FirstStart))">$VAR[Action_FirstStart_HomeFocus]</onload>
    <onload condition="Skin.HasSetting(Home.FirstRun) + String.IsEmpty(Window(1198).Property(FirstStart))">SetProperty(FirstStart,True,1198)</onload>

    <controls>
        <include content="Hub_Window">
            <param name="window">home</param>
        </include>
    </controls>
</window>
