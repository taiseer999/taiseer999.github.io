<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <variable name="LiveTV_Switcher_Items_GroupName">
        <value condition="!String.IsEmpty(Container(509).ListItemAbsolute(0).Label)">$INFO[Container(509).ListItemAbsolute(0).Label]</value>
        <value>$LOCALIZE[503]</value>
    </variable>

    <include name="LiveTV_Switcher_Items">
        <item>
            <label>$LOCALIZE[137]</label>
            <onclick>ActivateWindow(tvsearch,pvr://search/,return)</onclick>
            <visible>!Integer.IsEqual(Container(501).NumItems,0) | Container(501).IsUpdating</visible>
            <property name="widget_id">$NUMBER[501]</property>
            <property name="guid">pvr-501</property>
            <include content="Hub_Widget_Overlay"><param name="window_id">1107</param></include>
            <visible>!Skin.HasSetting(Hub.1107.DisableSearch)</visible>
        </item>
        <item>
            <label>$VAR[LiveTV_Switcher_Items_GroupName]</label>
            <onclick>ActivateWindow(tvchannels,$INFO[Container(509).ListItemAbsolute(0).FolderPath],return)</onclick>
            <visible>!Integer.IsEqual(Container(509).NumItems,0) | !Integer.IsEqual(Container(502).NumItems,0) | Container(502).IsUpdating</visible>
            <property name="widget_id">$NUMBER[502]</property>
            <property name="guid">pvr-502</property>
            <include content="Hub_Widget_Overlay"><param name="window_id">1107</param></include>
            <visible>!Skin.HasSetting(Hub.1107.DisableChannels)</visible>
        </item>
        <item>
            <label>$LOCALIZE[19145]</label>
            <onclick>ActivateWindow(tvguide)</onclick>
            <visible>!Integer.IsEqual(Container(503).NumItems,0) | Container(503).IsUpdating</visible>
            <property name="widget_id">$NUMBER[503]</property>
            <property name="guid">pvr-503</property>
            <include content="Hub_Widget_Overlay"><param name="window_id">1107</param></include>
            <visible>!Skin.HasSetting(Hub.1107.DisableGroups)</visible>
        </item>
        <item>
            <label>$LOCALIZE[19017]</label>
            <onclick>ActivateWindow(tvrecordings,pvr://recordings/tv/active?view=flat,return)</onclick>
            <visible>!Integer.IsEqual(Container(504).NumItems,0) | Container(504).IsUpdating</visible>
            <property name="widget_id">$NUMBER[504]</property>
            <property name="guid">pvr-504</property>
            <include content="Hub_Widget_Overlay"><param name="window_id">1107</param></include>
            <visible>!Skin.HasSetting(Hub.1107.DisableRecordings)</visible>
        </item>
    </include>

    <include name="LiveTV_Wall_Widgets">
        <param name="include">Hub_Wall_Widget</param>
        <definition>
            <include content="$PARAM[include]" condition="!Skin.HasSetting(Hub.1107.DisableSearch)">
                <param name="id">501</param>
                <param name="target">tvsearch</param>
                <param name="content">pvr://channels/tv/*?view=lastplayed</param>
                <param name="sortby">lastplayed</param>
                <param name="sortorder">descending</param>
                <param name="include">List_Landscape_Row</param>
                <param name="visible">String.IsEqual(Container(601).ListItem.Property(guid),pvr-501)</param>
                <param name="home_switcher">false</param>
            </include>
            <include content="$PARAM[include]" condition="!Skin.HasSetting(Hub.1107.DisableChannels)">
                <param name="id">502</param>
                <param name="target">tvchannels</param>
                <param name="content">$INFO[Container(509).ListItemAbsolute(0).FolderPath]</param>
                <param name="include">List_Landscape_Row</param>
                <param name="visible">String.IsEqual(Container(601).ListItem.Property(guid),pvr-502)</param>
                <param name="home_switcher">false</param>
            </include>
            <include content="$PARAM[include]" condition="!Skin.HasSetting(Hub.1107.DisableGroups)">
                <param name="id">503</param>
                <param name="target">tvchannels</param>
                <param name="content">pvr://channels/tv/</param>
                <param name="include">List_Landscape_Row</param>
                <param name="visible">String.IsEqual(Container(601).ListItem.Property(guid),pvr-503)</param>
                <param name="home_switcher">false</param>
            </include>
            <include content="$PARAM[include]" condition="!Skin.HasSetting(Hub.1107.DisableRecordings)">
                <param name="id">504</param>
                <param name="target">tvrecordings</param>
                <param name="content">pvr://recordings/tv/active?view=flat</param>
                <param name="sortby">date</param>
                <param name="sortorder">descending</param>
                <param name="include">List_Landscape_Row</param>
                <param name="visible">String.IsEqual(Container(601).ListItem.Property(guid),pvr-504)</param>
                <param name="home_switcher">false</param>
            </include>
        </definition>
    </include>

    <include name="LiveTV_Combined_Widgets">
        <include content="LiveTV_Wall_Widgets">
            <param name="include">Hub_Combined_Widget</param>
        </include>
    </include>

    <include name="LiveTV_Widgets">
        <include content="Hub_Standard_Widget" condition="!Skin.HasSetting(Hub.1107.DisableSearch)">
            <param name="id">01</param>
            <param name="label">$LOCALIZE[568]</param>
            <param name="visible">true</param>
            <content target="tvchannels">pvr://channels/tv/*?view=lastplayed</content>
        </include>
        <include content="Hub_Standard_Widget" condition="!Skin.HasSetting(Hub.1107.DisableChannels)">
            <param name="id">02</param>
            <param name="label">$VAR[LiveTV_Switcher_Items_GroupName]</param>
            <param name="altvisible">[Integer.IsEqual(Container(509).NumItems,0) + Container(509).IsUpdating]</param>
            <content target="tvchannels">$INFO[Container(509).ListItemAbsolute(0).FolderPath]</content>
        </include>
        <include content="Hub_Standard_Widget" condition="!Skin.HasSetting(Hub.1107.DisableGroups)">
            <param name="id">03</param>
            <param name="label">$LOCALIZE[19146]</param>
            <param name="visible">true</param>
            <content target="tvchannels">pvr://channels/tv/</content>
        </include>
        <include content="Hub_Standard_Widget" condition="!Skin.HasSetting(Hub.1107.DisableRecordings)">
            <param name="id">04</param>
            <param name="label">$LOCALIZE[19017]</param>
            <param name="visible">true</param>
            <content target="tvrecordings">pvr://recordings/tv/active?view=flat</content>
        </include>
    </include>

    <include name="LiveTV_Content">
        <include content="Hub_Widgets_Grouplist">
            <include content="LiveTV_Widgets">
                <param name="info">$PARAM[info]</param>
            </include>
        </include>
    </include>

</includes>
