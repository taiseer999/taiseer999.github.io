<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="View_Line_Label">
        <control type="label">
            <label fallback="$PARAM[label_fallback]">$PARAM[label]</label>
            <align>$PARAM[align]</align>
            <haspath>$PARAM[haspath]</haspath>
            <textcolor>$PARAM[textcolor]</textcolor>
            <aligny>center</aligny>
            <textcolor>main_fg_100</textcolor>
            <font>font_main_bold</font>
            <width>auto</width>
            <height>80</height>
        </control>
    </include>

    <include name="View_Line_SubLabel">
        <control type="label">
            <label fallback="$PARAM[label_fallback]">$PARAM[label]</label>
            <align>$PARAM[align]</align>
            <haspath>$PARAM[haspath]</haspath>
            <textcolor>$PARAM[textcolor]</textcolor>
            <aligny>center</aligny>
            <textcolor>main_fg_100</textcolor>
            <font>font_hint_bold</font>
            <width>auto</width>
            <centertop>30</centertop>
            <height>40</height>
            <visible>$PARAM[visible]</visible>
        </control>
    </include>

    <include name="View_Line_Divider_left">
        <left>0</left>
        <texture colordiffuse="main_fg_12" flipx="true">common/gradient-box.png</texture>
    </include>
    <include name="View_Line_Divider_right">
        <right>0</right>
        <texture colordiffuse="main_fg_12" flipx="false">common/gradient-box.png</texture>
    </include>

    <include name="View_Line_Divider">
        <param name="align">left</param>
        <param name="width">720</param>
        <definition>
            <control type="image">
                <height>1</height>
                <centerbottom>10</centerbottom>
                <width>$PARAM[width]</width>
                <include>View_Line_Divider_$PARAM[align]</include>
            </control>
        </definition>
    </include>

    <include name="View_Line">
        <param name="label">$VAR[Label_Section_Main]$VAR[Label_Section_SortMethod, [COLOR=main_fg_30]&gt;[/COLOR] ,]</param>
        <param name="label_fallback" />
        <param name="haspath">false</param>
        <param name="textcolor">main_fg_90</param>
        <param name="subtextcolor">main_fg_70</param>
        <param name="top">520</param>
        <param name="visible">true</param>
        <param name="left">view_pad</param>
        <param name="right">view_pad</param>
        <param name="use_spinner">false</param>
        <param name="run_spinner">false</param>
        <param name="use_subtext">false</param>
        <param name="sub_visible">false</param>
        <definition>

            <control type="group">
                <top>$PARAM[top]</top>
                <height>40</height>
                <left>$PARAM[left]</left>
                <right>$PARAM[right]</right>
                <visible>$PARAM[visible]</visible>

                <control type="group">
                    <centertop>0</centertop>
                    <height>80</height>
                    <include content="View_Line_Label">
                        <param name="label">$PARAM[label]</param>
                        <param name="align">$PARAM[align]</param>
                        <param name="haspath">$PARAM[haspath]</param>
                        <param name="textcolor">$PARAM[textcolor]</param>
                        <param name="label_fallback">$PARAM[label_fallback]</param>
                    </include>
                    <include content="View_Line_Spinner" condition="$PARAM[use_spinner]">
                        <param name="label">$PARAM[label]</param>
                        <param name="haspath">$PARAM[haspath]</param>
                        <param name="textcolor">$PARAM[textcolor]</param>
                        <param name="label_fallback">$PARAM[label_fallback]</param>
                        <param name="visible">$PARAM[run_spinner]</param>
                    </include>
                </control>

                <control type="grouplist">
                    <orientation>horizontal</orientation>
                    <align>$PARAM[align]</align>
                    <itemgap>8</itemgap>
                    <width>720</width>
                    <include content="View_Line_SubLabel" condition="$PARAM[use_subtext]">
                        <param name="label">$PARAM[sublabel]</param>
                        <param name="align">$PARAM[align]</param>
                        <param name="haspath">$PARAM[haspath]</param>
                        <param name="textcolor">$PARAM[subtextcolor]</param>
                        <param name="label_fallback">$PARAM[sublabel_fallback]</param>
                        <param name="visible">$PARAM[sub_visible]</param>
                    </include>
                    <include content="View_Line_Divider">
                        <param name="align">$PARAM[align]</param>
                    </include>
                </control>

            </control>
        </definition>
    </include>

    <include name="View_Line_Spinner">
        <control type="grouplist">
            <itemgap>20</itemgap>
            <orientation>horizontal</orientation>
            <height>80</height>
            <control type="label">
                <label fallback="$PARAM[label_fallback]">$PARAM[label]</label>
                <textcolor>00ffffff</textcolor>
                <width>auto</width>
                <haspath>$PARAM[haspath]</haspath>
                <font>font_main_bold</font>
                <animation effect="fade" start="0" end="0" condition="true">Conditional</animation>
            </control>
            <control type="image">
                <width>32</width>
                <height>32</height>
                <aspectratio>keep</aspectratio>
                <centertop>42</centertop>
                <bordersize>-16</bordersize>
                <texture colordiffuse="$PARAM[textcolor]">special://skin/extras/icons/update.png</texture>
                <animation effect="rotate" start="0" end="-180" time="1200" delay="1200" loop="true" center="auto" tween="back" condition="true">Conditional</animation>
                <animation effect="fade" start="0" end="100" delay="1600" time="1" reversible="true">Visible</animation>
                <animation effect="fade" start="100" end="0" delay="400" time="1" reversible="true">Hidden</animation>
                <visible>$PARAM[visible]</visible>
            </control>
        </control>
    </include>

    <!-- Expressions -->
    <expression name="View_Mode_Rows_Expression">[$EXP[Exp_View_500] | $EXP[Exp_View_501] | $EXP[Exp_View_502] | $EXP[Exp_View_503] | $EXP[Exp_View_504] | $EXP[Exp_View_505]]</expression>

    <expression name="View_Mode_Wall_Expression">[$EXP[Exp_View_510] | $EXP[Exp_View_511] | $EXP[Exp_View_512] | $EXP[Exp_View_513] | $EXP[Exp_View_514]]</expression>

    <expression name="View_Mode_List_Expression">[$EXP[View_Mode_List_Full_Expression] | $EXP[View_Mode_List_Flix_Expression]]</expression>
    <expression name="View_Mode_List_Full_Expression">[$EXP[Exp_View_506] | $EXP[Exp_View_507] | $EXP[Exp_View_508]]</expression>
    <expression name="View_Mode_List_Flix_Expression">[$EXP[Exp_View_509] | $EXP[Exp_View_549]]</expression>

    <expression name="View_Mode_Comb_Expression">[$EXP[View_Mode_Comb_Flix_Expression] | $EXP[View_Mode_Comb_Full_Expression]]</expression>
    <expression name="View_Mode_Comb_Flix_Expression">[$EXP[Exp_View_520] | $EXP[Exp_View_521] | $EXP[Exp_View_522] | $EXP[Exp_View_523] | $EXP[Exp_View_524]]</expression>
    <expression name="View_Mode_Comb_Full_Expression">[$EXP[Exp_View_526]]</expression>

    <expression name="View_Mode_Comb_Tall_Expression">[$EXP[Exp_View_528]]</expression>

    <expression name="View_Row_Info_Details_Expression">[$EXP[View_Mode_Rows_Expression] | $EXP[View_Mode_List_Flix_Expression] | $EXP[View_Mode_Comb_Flix_Expression]]</expression>

    <expression name="View_Scrollbar_Horizontal_Expression">[$EXP[View_Mode_Rows_Expression] | $EXP[View_Mode_Comb_Flix_Expression]]</expression>
    <expression name="View_Scrollbar_Vertical_Flix_Expression">[$EXP[View_Mode_List_Flix_Expression]]</expression>
    <expression name="View_Scrollbar_Vertical_Full_Expression">[$EXP[View_Mode_List_Full_Expression] | $EXP[View_Mode_Comb_Full_Expression] | $EXP[View_Mode_Comb_Tall_Expression]]</expression>
    <expression name="View_Scrollbar_Vertical_Wall_Expression">[$EXP[View_Mode_Wall_Expression]]</expression>

    <include name="View_Row_Line">
        <control type="group">
            <visible>!Integer.IsEqual(Container.NumItems,0)</visible>
            <control type="group">
                <visible>$EXP[View_Row_Info_Details_Expression]</visible>
                <visible>!$EXP[View_Mode_Comb_Flix_Expression]</visible>
                <visible>!$EXP[View_Mode_Comb_Tall_Expression]</visible>
                <include content="View_Line">
                    <param name="use_spinner">true</param>
                    <param name="run_spinner">[Container.IsUpdating]</param>
                </include>
            </control>
            <control type="group">
                <visible>!$EXP[View_Row_Info_Details_Expression]</visible>
                <visible>!$EXP[View_Mode_Comb_Flix_Expression]</visible>
                <visible>!$EXP[View_Mode_Comb_Tall_Expression]</visible>
                <include content="View_Line">
                    <param name="use_spinner">true</param>
                    <param name="run_spinner">[Container.IsUpdating]</param>
                    <param name="top">260</param>
                </include>
            </control>
            <control type="group">
                <visible allowhiddenfocus="true">$EXP[View_Mode_Comb_Tall_Expression]</visible>
                <include>View_Combined_List_Horz_Selector</include>
            </control>
            <control type="group">
                <visible allowhiddenfocus="true">$EXP[View_Mode_Comb_Flix_Expression]</visible>
                <include>View_Combined_Row_Horz_Selector</include>
            </control>
        </control>
    </include>

    <include name="View_Row_Info">
        <control type="group">
            <visible>!Integer.IsEqual(Container.NumItems,0)</visible>
            <include>Info_Panel_Dimensions</include>
            <include content="Info_Panel">
                <param name="visible">String.IsEmpty(Window.Property(TMDBHelper.WidgetContainer))</param>
                <param name="visible_line">$EXP[View_Row_Info_Details_Expression]</param>
                <param name="visible_plot">$EXP[View_Row_Info_Details_Expression]</param>
                <param name="visible_meta">$EXP[View_Row_Info_Details_Expression]</param>
            </include>
            <include>View_Combined_Info_Panel</include>
        </control>
    </include>

    <include name="View_MediaWindows_ID">
        <views>500,501,502,503,504,505,506,507,508,509,549,510,511,512,513,514,520,521,522,523,524,526,528</views>
    </include>

    <include name="View_Row_Items">
        <definition>
            <control type="group">

                <!-- Row Views -->
                <include condition="$EXP[Exp_View_500_Include]">View_500_Square_Row</include>
                <include condition="$EXP[Exp_View_501_Include]">View_501_Landscape_Row</include>
                <include condition="$EXP[Exp_View_502_Include]">View_502_Poster_Row</include>
                <include condition="$EXP[Exp_View_503_Include]">View_503_Circle_Row</include>
                <include condition="$EXP[Exp_View_504_Include]">View_504_Board_Row</include>
                <include condition="$EXP[Exp_View_505_Include]">View_505_Card_Row</include>

                <!-- Wall Views -->
                <include condition="$EXP[Exp_View_510_Include]">View_510_Square_Wall</include>
                <include condition="$EXP[Exp_View_511_Include]">View_511_Landscape_Wall</include>
                <include condition="$EXP[Exp_View_512_Include]">View_512_Poster_Wall</include>
                <include condition="$EXP[Exp_View_513_Include]">View_513_Circle_Wall</include>
                <include condition="$EXP[Exp_View_514_Include]">View_514_Board_Wall</include>

                <!-- Combined Views -->
                <include condition="$EXP[Exp_View_520_Include]">View_520_Square_Combined_Row</include>
                <include condition="$EXP[Exp_View_521_Include]">View_521_Landscape_Combined_Row</include>
                <include condition="$EXP[Exp_View_522_Include]">View_522_Poster_Combined_Row</include>
                <include condition="$EXP[Exp_View_523_Include]">View_523_Circle_Combined_Row</include>
                <include condition="$EXP[Exp_View_524_Include]">View_524_Board_Combined_Row</include>
                <include condition="$EXP[Exp_View_526_Include]">View_526_List_Combined</include>
                <include condition="$EXP[Exp_View_528_Include]">View_528_List_Combined</include>

                <!-- List Views -->
                <include condition="$EXP[Exp_View_506_Include]">View_506_Basic_List</include>
                <include condition="$EXP[Exp_View_507_Include]">View_507_Media_List</include>
                <include condition="$EXP[Exp_View_508_Include]">View_508_Expanded_List</include>
                <include condition="$EXP[Exp_View_509_Include]">View_509_Flixart_List</include>
                <include condition="$EXP[Exp_View_549_Include]">View_549_Flixart_List</include>

            </control>
        </definition>
    </include>

    <include name="View_Furniture_Footer_ViewLine">
        <param name="textcolor">main_fg_30</param>
        <definition>
            <control type="group">
                <visible>$PARAM[visible]</visible>
                <include content="View_Line">
                    <param name="label">$PARAM[label]</param>
                    <param name="align">$PARAM[align]</param>
                    <param name="haspath">$PARAM[haspath]</param>
                    <param name="use_highlight">$PARAM[use_highlight]</param>
                    <param name="top">0</param>
                    <param name="left">0</param>
                    <param name="right">0</param>
                    <param name="textcolor">$PARAM[textcolor]</param>
                    <param name="subtextcolor">$PARAM[textcolor]</param>
                    <param name="sublabel">$PARAM[sublabel]</param>
                    <param name="use_subtext">$PARAM[use_subtext]</param>
                    <param name="sub_visible">$PARAM[sub_visible]</param>
                    <param name="label_fallback">$PARAM[label_fallback]</param>
                </include>
            </control>
        </definition>
    </include>

    <variable name="View_ContentID">
        <value condition="Control.IsVisible(500)">500</value>
        <value condition="Control.IsVisible(501)">501</value>
        <value condition="Control.IsVisible(502)">502</value>
        <value condition="Control.IsVisible(503)">503</value>
        <value condition="Control.IsVisible(504)">504</value>
        <value condition="Control.IsVisible(505)">505</value>
        <value condition="Control.IsVisible(506)">506</value>
        <value condition="Control.IsVisible(507)">507</value>
        <value condition="Control.IsVisible(508)">508</value>
        <value condition="Control.IsVisible(509)">509</value>
        <value condition="Control.IsVisible(510)">510</value>
        <value condition="Control.IsVisible(511)">511</value>
        <value condition="Control.IsVisible(512)">512</value>
        <value condition="Control.IsVisible(513)">513</value>
        <value condition="Control.IsVisible(514)">514</value>
        <value condition="Control.IsVisible(520)">530</value>
        <value condition="Control.IsVisible(521)">531</value>
        <value condition="Control.IsVisible(522)">532</value>
        <value condition="Control.IsVisible(523)">533</value>
        <value condition="Control.IsVisible(524)">534</value>
        <value condition="Control.IsVisible(526)">536</value>
        <value condition="Control.IsVisible(528)">538</value>
        <value condition="Control.IsVisible(549)">549</value>
        <value>500</value>
    </variable>

    <include name="View_Scrollbar_Strip">

        <!-- Dummy for bouncing focus back to view on back -->
        <include content="Object_Hidden_Button">
            <param name="id">62</param>
            <onfocus>SetFocus($VAR[View_ContentID])</onfocus>
        </include>
        <include content="Object_Hidden_Button">
            <param name="id">63</param>
            <onfocus>SetFocus(500)</onfocus>
        </include>
        <include content="Object_Hidden_Button">
            <param name="id">67</param>
            <onfocus>SetFocus(500)</onfocus>
            <onfocus>ActivateWindow(1171)</onfocus>
        </include>

        <!-- Horizontal Scrollbar -->
        <include content="Object_Hidden_Button">
            <param name="id">610</param>
            <onup>62</onup>
            <ondown>500</ondown>
            <ondown>ActivateWindow(1171)</ondown>
            <onback>62</onback>
            <onleft>SetFocus($VAR[Action_View_ContainerID])</onleft>
            <onleft>Action(PrevLetter)</onleft>
            <onleft>SetFocus(610)</onleft>
            <onright>SetFocus($VAR[Action_View_ContainerID])</onright>
            <onright>Action(NextLetter)</onright>
            <onright>SetFocus(610)</onright>
            <onfocus condition="!$EXP[Exp_IsAlphabetStrip]">SetFocus(60)</onfocus>
        </include>
        <control type="group">
            <centerbottom>90</centerbottom>
            <height>scrollbar_w</height>
            <left>view_pad</left>
            <width>640</width>
            <visible allowhiddenfocus="true">Control.HasFocus(60) | Control.HasFocus(610)</visible>
            <control type="scrollbar" id="60">
                <orientation>horizontal</orientation>
                <texturesliderbackground />
                <include>Texture_Scrollbar_SliderBar_H</include>
                <include>Texture_Scrollbar_H</include>
                <onup>62</onup>
                <ondown>500</ondown>
                <ondown>ActivateWindow(1171)</ondown>
                <onback>62</onback>
                <left>130</left>
            </control>
        </control>

        <!-- Vertical Scrollbar -->
        <include content="Object_Hidden_Button">
            <param name="id">611</param>
            <onleft>62</onleft>
            <onback>62</onback>
            <onright>500</onright>
            <onright>ActivateWindow(1171)</onright>
            <onup>SetFocus($VAR[Action_View_ContainerID])</onup>
            <onup>Action(PrevLetter)</onup>
            <onup>SetFocus(611)</onup>
            <ondown>SetFocus($VAR[Action_View_ContainerID])</ondown>
            <ondown>Action(NextLetter)</ondown>
            <ondown>SetFocus(611)</ondown>
            <onfocus condition="!$EXP[Exp_IsAlphabetStrip] + $EXP[View_Scrollbar_Vertical_Full_Expression]">SetFocus(64)</onfocus>
            <onfocus condition="!$EXP[Exp_IsAlphabetStrip] + $EXP[View_Scrollbar_Vertical_Flix_Expression]">SetFocus(65)</onfocus>
            <onfocus condition="!$EXP[Exp_IsAlphabetStrip] + $EXP[View_Scrollbar_Vertical_Wall_Expression]">SetFocus(66)</onfocus>
        </include>
        <control type="group">
            <centerright>40</centerright>
            <width>scrollbar_w</width>
            <visible allowhiddenfocus="true">$EXP[View_Scrollbar_Vertical_Full_Expression] + [Control.HasFocus(64) | Control.HasFocus(611)]</visible>
            <bottom>180</bottom>
            <height>612</height>
            <control type="image">
                <width>1</width>
                <centerleft>50%</centerleft>
                <texture colordiffuse="main_fg_12">common/white.png</texture>
            </control>
            <control type="scrollbar" id="64">
                <orientation>vertical</orientation>
                <texturesliderbackground />
                <include>Texture_Scrollbar_SliderBar_V</include>
                <include>Texture_Scrollbar_V</include>
                <onleft>62</onleft>
                <onright>500</onright>
                <onright>ActivateWindow(1171)</onright>
                <onback>62</onback>
                <showonepage>true</showonepage>
            </control>
        </control>
        <control type="group">
            <centerright>40</centerright>
            <width>scrollbar_w</width>
            <visible allowhiddenfocus="true">$EXP[View_Scrollbar_Vertical_Flix_Expression] + [Control.HasFocus(65) | Control.HasFocus(611)]</visible>
            <bottom>180</bottom>
            <height>350</height>
            <control type="image">
                <width>1</width>
                <centerleft>50%</centerleft>
                <texture colordiffuse="main_fg_12">common/white.png</texture>
            </control>
            <control type="scrollbar" id="65">
                <orientation>vertical</orientation>
                <texturesliderbackground />
                <include>Texture_Scrollbar_SliderBar_V</include>
                <include>Texture_Scrollbar_V</include>
                <onleft>62</onleft>
                <onright>500</onright>
                <onright>ActivateWindow(1171)</onright>
                <onback>62</onback>
                <showonepage>true</showonepage>
            </control>
        </control>
        <control type="group">
            <centerright>40</centerright>
            <width>scrollbar_w</width>
            <visible allowhiddenfocus="true">$EXP[View_Scrollbar_Vertical_Wall_Expression] + [Control.HasFocus(66) | Control.HasFocus(611)]</visible>
            <bottom>40</bottom>
            <height>710</height>
            <control type="image">
                <width>1</width>
                <centerleft>50%</centerleft>
                <texture colordiffuse="main_fg_12">common/white.png</texture>
            </control>
            <control type="scrollbar" id="66">
                <orientation>vertical</orientation>
                <texturesliderbackground />
                <include>Texture_Scrollbar_SliderBar_V</include>
                <include>Texture_Scrollbar_V</include>
                <onleft>62</onleft>
                <onright>500</onright>
                <onright>ActivateWindow(1171)</onright>
                <onback>62</onback>
                <showonepage>true</showonepage>
            </control>
        </control>
    </include>

    <include name="View_Main">
        <definition>

            <include content="Object_Hidden_Button">
                <param name="id">612</param>
                <onfocus>SetFocus(500)</onfocus>
                <onfocus>RunScript(script.skinvariables,set_listitem_to_menunode=homewidgets||1101widgets||1102widgets||1103widgets||1104widgets||homesubmenu||1101submenu||1102submenu||1103submenu||1104submenu||powermenu||powertray,skin=$VAR[Path_SkinVariables_SkinFolder],use_listitem=False,target=$VAR[Action_CurrentMediaWindow],path=$INFO[Container.FolderPath],label=$VAR[Label_Section_Main])</onfocus>
            </include>

            <include>Background</include>

            <control type="group">
                <include>Animation_Group_Bumper</include>
                <control type="group">
                    <include>Animation_View_WindowChange</include>
                    <include>View_Scrollbar_Strip</include>
                    <include>View_Row_Items</include>
                    <include>View_Row_Line</include>
                    <control type="group">
                        <visible>!$EXP[View_Mode_Wall_Expression]</visible>
                        <include>Furniture_Footer_Left</include>
                    </control>
                </control>
                <control type="group">
                    <visible>!$EXP[Exp_InfoDialogs]</visible>
                    <include>View_Row_Info</include>
                </control>
            </control>

            <control type="group">
                <include>Furniture_Reposition</include>
                <visible>!$EXP[Exp_InfoDialogs]</visible>
                <include>Furniture_Footer_Right</include>
            </control>
        </definition>
    </include>
</includes>