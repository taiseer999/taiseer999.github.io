    <include name="Furniture_Reposition">
        <!-- <animation effect="slide" start="0" end="0,-700" condition="String.IsEqual(Window(Home).Property(InfoPanel.FullSwitch),Wall) + !$EXP[Exp_InfoDialogs] + [Window.IsMedia | Window.IsVisible(Home) | Window.IsVisible(1101) | Window.IsVisible(1102) | Window.IsVisible(1103) | Window.IsVisible(1104)]">Conditional</animation> -->
