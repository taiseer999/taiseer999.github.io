<?xml version="1.0" encoding="UTF-8"?>
<includes>

    <include name="Furniture_Header_Left">
        <control type="group">
            <left>0</left>
            <width>720</width>
            <include content="View_Line_Divider">
                <param name="align">left</param>
            </include>
            <control type="label">
                <label>$PARAM[label]</label>
                <align>left</align>
                <aligny>center</aligny>
                <textcolor>$PARAM[textcolor]</textcolor>
                <font>font_Topbar_bold</font>
                <height>80</height>
            </control>
        </control>
    </include>


    <variable name="Furniture_Header_Right_Temperature">
        <value condition="!Skin.HasSetting(Header.DisableWeather)"> $INFO[Weather.Temperature]</value>
    </variable>
    <include name="Furniture_Header_Right">
        <control type="group">

            <right>0</right>
            <width>353
            </width>
            <visible>$PARAM[visible_right]</visible>
            <include content="View_Line_Divider">
                <param name="align">right</param>
            </include>
             <control type="grouplist">
                  <align>right</align>
                <aligny>right</aligny>
               <aligny>center</aligny>
                <control type="image">
                   <height>70</height>
                    <height>50</height>
                    <width>50</width>
                    <aspectratio>keep</aspectratio>
                    <texture>$INFO[Weather.FanartCode,resource://resource.images.weathericons.white/,.png]</texture>
                    <visible>Weather.IsFetched</visible>
                    
                </control>
            </control>    
            <control type="label">
                <label> $VAR[Furniture_Header_Right_Temperature,,] • $INFO[System.Time]</label>
                <align>right</align>
                <aligny>center</aligny>
                <textcolor>main_fg_70</textcolor>
                <font>font_Topbar_bold</font>
                <height>80</height>
                
            </control>
            <control type="label">
                <visible>Skin.HasSetting(Furniture.Network_RAM)</visible>
                <label>$INFO[System.CPUTemperature,[COLOR lightgreen][/COLOR] ,]  $INFO[system.memory(used.percent),[COLOR darkorange][/COLOR] ,]  $VAR[NetworkVar]  </label>
                <align>right</align>
                <aligny>center</aligny>
                <textcolor>main_fg_70</textcolor>
                <font>font_Topbarinfo</font>
                <centertop>-10%</centertop>
                <height>80</height>
                
            </control>
            
         </control>
    </include>

    <include name="Furniture_Header">
        <param name="label">$VAR[Label_Header_Main]</param>
        <param name="include_left">true</param>
        <param name="include_right">true</param>
        <param name="textcolor">main_fg_90</param>
        <param name="top">40</param>
        <definition>
            <control type="group">
                <top>$PARAM[top]</top>
                <height>80</height>
                <left>view_pad</left>
                <right>view_pad</right>
                <include content="Furniture_Header_Left" condition="$PARAM[include_left]">
                    <param name="label">$PARAM[label]</param>
                    <param name="textcolor">$PARAM[textcolor]</param>
                </include>
                <include content="Furniture_Header_Right" condition="$PARAM[include_right]">
                    <param name="textcolor">$PARAM[textcolor]</param>
                </include>
            </control>
        </definition>
    </include>

    <include name="Furniture_Footer_Right">
        <param name="visible">true</param>
        <definition>
            <control type="group">
                <include>Dimension_Bottombar</include>
                <control type="group">
                    <visible>$PARAM[visible]</visible>
                    <include>Furniture_HideOnNotification</include>
                    <control type="group">
                        <height>80</height>
                        <centertop>50%</centertop>
                        <control type="group">
                            <height>80</height>
                            <top>-5</top>
                            <include condition="!Skin.HasSetting(Footer.DisableStudio)">Furniture_Studio</include>
                            <include condition="!Skin.HasSetting(Footer.DisableNowPlaying)">Furniture_Player</include>
                            <include condition="Skin.HasSetting(Footer.EnableCodecs)">Furniture_Codecs</include>
                        </control>
                    </control>
                </control>
            </control>
        </definition>
    </include>
    <include name="Furniture_SlidesOver">
        <animation effect="slide" start="0" end="-80" tween="back" easing="out" time="400" reversible="false" condition="[Window.IsVisible(DialogBusy.xml) | Window.IsVisible(DialogVolumeBar.xml)]">Conditional</animation>
        <animation effect="slide" start="-80" end="0" tween="back" easing="out" time="400" reversible="false" condition="![Window.IsVisible(DialogBusy.xml) | Window.IsVisible(DialogVolumeBar.xml)]">Conditional</animation>
    </include>
    <include name="Furniture_HideOnNotification">
        <animation effect="fade" start="100" end="0" time="150" reversible="false" condition="[Window.IsVisible(DialogExtendedProgressBar.xml) | Window.IsVisible(DialogNotification.xml)]">Conditional</animation>
        <animation effect="fade" start="0" end="100" time="300" reversible="false" condition="![Window.IsVisible(DialogExtendedProgressBar.xml) | Window.IsVisible(DialogNotification.xml)]">Conditional</animation>
    </include>
    <include name="Furniture_Player">
        <control type="group">
            <width>720</width>
            <right>-20</right>
            <visible>Player.HasMedia</visible>
            <control type="group">
                <right>0</right>
                <visible>!Window.IsActive(DialogVolumeBar.xml)</visible>
                <include content="Animation_SlideIn_Dialog">
                    <param name="windowopen_condition">false</param>
                    <param name="posy">48</param>
                </include>
                <include content="Furniture_ItemIcon">
                    <param name="icon">$VAR[Image_NowPlaying_PlayPause]</param>
                    <param name="flipped">true</param>
                    <param name="right">15</param>
                    <param name="visible">true</param>
                    <param name="size">50</param>
                </include>
                <control type="group">
                    <centerright>40</centerright>
                    <centertop>50%</centertop>
                    <width>100</width>
                    <height>100</height>
                    <control type="image">
                        <bordersize>-4</bordersize>
                        <texture colordiffuse="$VAR[ColorHighlight]">$INFO[Player.Progress,progress/circle/p,.png]</texture>
                        <aspectratio align="center" aligny="center">keep</aspectratio>
                    </control>
                </control>
            </control>
            <include content="Furniture_Busy_FloatingText">
                <param name="mainlabel">$VAR[Label_NowPlayingTitle]</param>
                <param name="minilabel">$VAR[Label_NowPlayingSubLabel]</param>
            </include>
        </control>
    </include>
   <include name="Furniture_Studio">
        <control type="grouplist">
            <align>right</align>
            <orientation>horizontal</orientation>
            <itemgap>20</itemgap>
            <include>Furniture_SlidesOver</include>
            <visible>!Player.HasMedia | Skin.HasSetting(Footer.DisableNowPlaying)</visible>
            <visible>String.IsEmpty(ListItem.VideoCodec) | !Skin.HasSetting(Footer.EnableCodecs)</visible>
            <control type="image">
                <width>290</width>
                <height>100</height>
                <aspectratio align="right">keep</aspectratio>
                <texture background="true">$VAR[Image_CombinedStudio]</texture>
                <centertop>50%</centertop>
            </control>
        </control>
    </include>
   <include name="Furniture_Codecs">
        <param name="colordiffuse">white</param>
        <param name="infolabel_videoresolution">ListItem.VideoResolution</param>
        <param name="infolabel_videoaspect">ListItem.VideoAspect</param>
        <param name="infolabel_videocodec">ListItem.VideoCodec</param>
        <param name="infolabel_audiocodec">ListItem.AudioCodec</param>
        <param name="infolabel_audiochannels">ListItem.AudioChannels</param>
        <param name="align">right</param>
        <param name="itemgap">20</param>
        <definition>
            <control type="grouplist">
                <visible>!String.IsEmpty($PARAM[infolabel_videoresolution])</visible>
                <orientation>horizontal</orientation>
                <align>center</align>
                <itemgap>$PARAM[itemgap]</itemgap>
                <control type="image">
                    <texture background="true" colordiffuse="$PARAM[colordiffuse]">$INFO[$PARAM[infolabel_videoresolution],flags/colorful/resolution/,.png]</texture>
                    <aspectratio>keep</aspectratio>
                    <height>48</height>
                    <width>66</width>
                    <centertop>80%</centertop>
                    <visible>!String.IsEmpty($PARAM[infolabel_videoresolution])</visible>
                </control>
                <control type="image">
                    <texture background="true" colordiffuse="$PARAM[colordiffuse]">$INFO[$PARAM[infolabel_videoaspect],flags/colorful/aspectratio/,.png]</texture>
                    <aspectratio>keep</aspectratio>
                    <height>48</height>
                    <width>71</width>
                    <centertop>80%</centertop>
                    <visible>!String.IsEmpty($PARAM[infolabel_videoaspect])</visible>
                </control>
                <control type="image">
                    <texture background="true" colordiffuse="$PARAM[colordiffuse]">$INFO[$PARAM[infolabel_videocodec],flags/colorful/source/,.png]</texture>
                    <aspectratio>keep</aspectratio>
                    <height>48</height>
                    <width>71</width>
                    <centertop>80%</centertop>
                    <visible>!String.IsEmpty($PARAM[infolabel_videocodec])</visible>
                </control>
                <control type="image">
                    <texture background="true" colordiffuse="$PARAM[colordiffuse]">$INFO[$PARAM[infolabel_audiocodec],flags/colorful/audio/,.png]</texture>
                    <aspectratio>keep</aspectratio>
                    <height>48</height>
                    <width>71</width>
                    <centertop>80%</centertop>
                    <visible>!String.IsEmpty($PARAM[infolabel_audiocodec])</visible>
                </control>
                <control type="image" id="77881">
                    <fadetime>100</fadetime>
                    <centertop>80%</centertop>
                    <width>85</width>
                    <height>58</height>
                    <aspectratio align="left">keep</aspectratio>
                    <texture background="true" colordiffuse="$PARAM[colordiffuse]">$VAR[Image_RipSource]</texture>
                    <visible>!String.IsEmpty(Control.GetLabel(77881))</visible>
                </control>
                <control type="image">
                    <texture background="true" colordiffuse="$PARAM[colordiffuse]">$INFO[$PARAM[infolabel_audiochannels],flags/colorful/channels/,.png]</texture>
                    <aspectratio>keep</aspectratio>
                    <height>43</height>
                    <width>65</width>
                    <centertop>80%</centertop>
                    <visible>!String.IsEmpty($PARAM[infolabel_audiochannels])</visible>
                </control>
            </control>
        </definition>
    </include>


    <include name="Object_Patch">
        <definition>
            <control type="grouplist">
                   <visible>Window.IsActive(DialogVideoInfo.xml) + Control.HasFocus(4005)</visible>    
                <top>940</top>
                <left>0</left>
                <align>left</align>
                <usecontrolcoords>true</usecontrolcoords>
              <control type="group">
                    <height>80</height>
                    <centerbottom>80</centerbottom>
                    <align>center</align>
                    <fadetime>100</fadetime>
                    <control type="label">
                        <left>0</left>
                        <aligny>center</aligny>
                        <label>$INFO[ListItem.Path] $INFO[ListItem.FileName]</label>
                        <textcolor>main_fg_70</textcolor>
                        <font>font_tiny</font>
                        <width>1760</width>
                    </control>
              </control>
            </control>
        </definition>
    </include>

    <include name="Furniture_Footer_Left">
        <param name="enabled">true</param>
        <definition>
            <include content="Furniture_Footer_Left_Content" condition="$PARAM[enabled]">
                <param name="container">$PARAM[container]</param>
            </include>
        </definition>
    </include>
    <include name="Furniture_Footer_Left_Content">
        <control type="group">
            <include>Dimension_Bottombar</include>
            <include content="View_Furniture_Footer_ViewLine" condition="Window.IsMedia + !Window.IsVisible(addonbrowser) + !Window.IsVisible(eventlog) + !Window.IsVisible(MyMusicPlaylistEditor.xml)">
                <param name="visible">true</param>
                <param name="use_subtext">true</param>
                <param name="label">$INFO[Container.NumItems,, $LOCALIZE[31022]]</param>
                <param name="sublabel">$LOCALIZE[31135]$INFO[Container.CurrentPage, , $LOCALIZE[20163] ]$INFO[Container.NumPages]</param>
                <param name="sub_visible">Control.HasFocus(60) | Control.HasFocus(610)</param>
            </include>
            <include content="View_Furniture_Footer_ViewLine" condition="$EXP[Exp_PlainBackgroundWindows]">
                <param name="visible">true</param>
                <param name="label">$INFO[System.AddonVersion(skin.arctic.fuse.3),arctic.fuse v,]</param>
            </include>
        </control>
    </include>

    <include name="Furniture_Footer">
        <include>Furniture_Footer_Left</include>
        <include>Furniture_Footer_Right</include>
    </include>

    <include name="Furniture_MainLabel">
        <param name="id" />
        <param name="textcolor">main_fg_90</param>
        <param name="width">auto</param>
        <param name="visible">true</param>
        <param name="align">left</param>
        <definition>
            <control type="label" id="$PARAM[id]">
                <label>$PARAM[label]</label>
                <font>font_midi_bold</font>
                <textcolor>$PARAM[textcolor]</textcolor>
                <width max="$PARAM[max]">$PARAM[width]</width>
                <height>40</height>
                <centertop>50%</centertop>
                <visible>$PARAM[visible]</visible>
                <align>$PARAM[align]</align>
            </control>
        </definition>
    </include>

    <include name="Furniture_Busy_Spinner">
        <control type="image">
            <bordersize>-4</bordersize>
            <include content="Defs_BusySpinner_Image">
                <param name="spinspinner">$PARAM[spinspinner]</param>
            </include>
        </control>
    </include>

    <include name="Furniture_Busy_Icon">
        <param name="hasspinner">false</param>
        <param name="hasprogress">false</param>
        <param name="hasicon">true</param>
        <param name="icon">special://skin/extras/icons/CE.png</param>
        <param name="spinspinner">false</param>
        <param name="spinnervisible">true</param>
        <param name="flipspinner">true</param>
        <param name="flipped">false</param>
        <param name="visible">true</param>
        <definition>
            <control type="group">
                <description>Busy animation</description>
                <width>50</width>
                <height>50</height>
                <centertop>50%</centertop>

                <visible>$PARAM[visible]</visible>

                <include content="Object_Left" condition="![$PARAM[flipped]]">
                    <param name="left">15</param>
                </include>
                <include content="Object_Right" condition="$PARAM[flipped]">
                    <param name="right">15</param>
                </include>

                <control type="group">
                    <include content="Furniture_ItemIcon" condition="$PARAM[hasicon]">
                        <param name="icon">$PARAM[icon]</param>
                        <param name="centered">true</param>
                        <param name="size">50</param>
                    </include>
                    <control type="group">
                        <centerleft>50%</centerleft>
                        <centertop>50%</centertop>
                        <width>100</width>
                        <height>100</height>
                        <visible>$PARAM[spinnervisible]</visible>
                        <include content="Furniture_Busy_Spinner" condition="$PARAM[hasspinner]">
                            <param name="spinspinner">$PARAM[spinspinner]</param>
                        </include>
                        <include content="Object_Control" condition="$PARAM[hasprogress]">
                            <param name="control">group</param>
                            <description>Busy animation</description>
                            <animation effect="rotate" condition="$PARAM[spinspinner]" start="0" end="-360" loop="true" time="2000" center="auto">Conditional</animation>
                            <description>Busy animation</description>
                            <control type="image">
                                <bordersize>-4</bordersize>
                                <texture colordiffuse="$VAR[ColorHighlight]" flipx="$PARAM[flipspinner]" flipy="$PARAM[flipspinner]">$INFO[$PARAM[progress],progress/circle/p,.png]</texture>
                                <aspectratio align="center" aligny="center">keep</aspectratio>
                            </control>
                        </include>
                    </control>
                </control>
            </control>
        </definition>
    </include>

    <include name="Furniture_ItemIcon">
        <param name="bordersize">0</param>
        <param name="icon_colordiffuse">main_bg_90</param>
        <param name="icon_diffuse">diffuse/circle/provider_circle.png</param>
        <param name="centerleft">50%</param>
        <param name="centered">false</param>
        <param name="flipped">false</param>
        <param name="visible">true</param>
        <param name="size">40</param>
        <param name="icon_visible">true</param>
        <definition>
            <control type="group">
                <centertop>50%</centertop>
                <width>$PARAM[size]</width>
                <height>$PARAM[size]</height>
                <include content="Object_PosX">
                    <param name="left">$PARAM[left]</param>
                    <param name="right">$PARAM[right]</param>
                    <param name="centerleft">$PARAM[centerleft]</param>
                    <param name="centerright">$PARAM[centerright]</param>
                    <param name="centered">$PARAM[centered]</param>
                    <param name="flipped">$PARAM[flipped]</param>
                </include>
                <visible>$PARAM[visible]</visible>
                <control type="image">
                    <include>Texture_Shadow_Provider</include>
                    <texture colordiffuse="main_fg_100">$PARAM[icon_diffuse]</texture>
                </control>
                <control type="image">
                    <aspectratio>keep</aspectratio>
                    <texture colordiffuse="$PARAM[icon_colordiffuse]" diffuse="$PARAM[icon_diffuse]">$PARAM[icon]</texture>
                    <bordersize>$PARAM[bordersize]</bordersize>
                    <visible>$PARAM[icon_visible]</visible>
                </control>
            </control>
        </definition>
    </include>

    <include name="Furniture_Busy_FloatingText">
        <param name="visible">true</param>
        <param name="percentage_visible">false</param>
        <definition>
            <control type="group">
                <top>25</top>
                <height>40</height>
                <right>100</right>
                <control type="grouplist">
                    <orientation>horizontal</orientation>
                    <align>right</align>
                    <itemgap>8</itemgap>
                    <include content="View_Line_Divider">
                        <param name="align">right</param>
                        <param name="width">320</param>
                    </include>
                    <control type="label">
                        <font>font_hint_bold</font>
                        <textcolor>main_fg_70</textcolor>
                        <shadowcolor>main_bg_30</shadowcolor>
                        <label>$PARAM[minilabel]</label>
                        <width>auto</width>
                        <align>right</align>
                        <height>40</height>
                        <centertop>30</centertop>
                    </control>
                    <control type="label">
                        <font>font_hint_bold</font>
                        <textcolor>main_fg_70</textcolor>
                        <shadowcolor>main_bg_30</shadowcolor>
                        <label>$PARAM[percentage_label]</label>
                        <width>auto</width>
                        <align>right</align>
                        <visible>$PARAM[percentage_visible]</visible>
                        <height>40</height>
                        <centertop>30</centertop>
                    </control>
                </control>
                <control type="label">
                    <height>40</height>
                    <centertop>0</centertop>
                    <font>font_main_bold</font>
                    <textcolor>main_fg_90</textcolor>
                    <shadowcolor>main_bg_30</shadowcolor>
                    <label>$PARAM[mainlabel]</label>
                    <align>right</align>
                </control>
            </control>
        </definition>
    </include>

