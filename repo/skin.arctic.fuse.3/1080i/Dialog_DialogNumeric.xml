<?xml version="1.0" encoding="UTF-8"?>
<includes>
    <include name="DialogNumeric">
        <include>Part_Dim_Overlay</include>
        <control type="group">
            <include>Animation_BounceIn_Dialog</include>
            <control type="group">
                <include>Dimension_DialogNumsMenu</include>
                <include content="Part_Background_Panel">
                    <param name="dialog_size">Dimension_DialogNumsMenu</param>
                    <param name="topline">true</param>
                </include>

                <!-- Content -->
                <control type="group" id="8000">
                    <include>Size_Dialog_Pad</include>
                    <control type="group">
                        <include>Size_Group_Head</include>
                        <include>Part_HeadText</include>
                        <include>Part_CloseButton</include>
                    </control>
                    <control type="group">
                        <include>Size_Group_Body</include>
                        <control type="group">
                            <include>Size_Grouplist_Pad</include>
                            <control type="group">
                                <height>80</height>
                                <control type="image">
                                    <texture colordiffuse="$VAR[Color_DialogBorder]" border="40">common/menu.png</texture>
                                </control>
                                <control type="label" id="4">
                                    <align>center</align>
                                    <textoffset>40</textoffset>
                                    <width>100%</width>
                                    <disabledcolor>dialog_bg_30</disabledcolor>
                                    <font>font_midi</font>
                                </control>
                                <control type="image">
                                    <height>1</height>
                                    <centerbottom>-20</centerbottom>
                                    <left>20</left>
                                    <right>20</right>
                                    <texture colordiffuse="$VAR[Color_DialogBorder]">common/white.png</texture>
                                </control>
                            </control>

                            <control type="group">
                                <top>80</top>
                                <control type="grouplist">
                                    <top>40</top>
                                    <orientation>vertical</orientation>
                                    <itemgap>keyboard_numeric_pad</itemgap>
                                    <include content="DialogNumeric_Grouplist">
                                        <include>DialogNumeric_12345</include>
                                    </include>
                                    <include content="DialogNumeric_Grouplist">
                                        <include>DialogNumeric_67890</include>
                                    </include>
                                    <include content="DialogNumeric_Grouplist">
                                        <include>DialogNumeric_00000</include>
                                    </include>
                                </control>
                            </control>
                        </control>
                    </control>
                </control>

            </control>
        </control>
    </include>

    <include name="DialogNumeric_Grouplist">
        <control type="grouplist">
            <orientation>horizontal</orientation>
            <itemgap>keyboard_numeric_pad</itemgap>
            <height>keyboard_numeric_height</height>
            <nested />
        </control>
    </include>

    <include name="DialogNumeric_12345">
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">11</param>
            <label>$NUMBER[1]</label>
            <ondown>16</ondown>
        </include>
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">12</param>
            <label>$NUMBER[2]</label>
            <ondown>17</ondown>
        </include>
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">13</param>
            <label>$NUMBER[3]</label>
            <ondown>18</ondown>
        </include>
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">14</param>
            <label>$NUMBER[4]</label>
            <ondown>19</ondown>
        </include>
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">15</param>
            <label>$NUMBER[5]</label>
            <ondown>10</ondown>
        </include>
    </include>

    <include name="DialogNumeric_67890">
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">16</param>
            <label>$NUMBER[6]</label>
            <onup>11</onup>
            <ondown>21</ondown>
        </include>
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">17</param>
            <label>$NUMBER[7]</label>
            <onup>12</onup>
            <ondown>99</ondown>
        </include>
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">18</param>
            <label>$NUMBER[8]</label>
            <onup>13</onup>
            <ondown>23</ondown>
        </include>
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">19</param>
            <label>$NUMBER[9]</label>
            <onup>14</onup>
            <ondown>20</ondown>
        </include>
        <include content="Object_Numeric_Button" description="Number">
            <param name="id">10</param>
            <label>$NUMBER[0]</label>
            <onup>15</onup>
            <ondown>22</ondown>
        </include>

    </include>

    <include name="DialogNumeric_00000">
        <include content="Object_Numeric_Button" description="Confirm">
            <param name="id">21</param>
            <label>&#xf058;</label>
            <font>font_midi_iconic</font>
            <onup>16</onup>
        </include>
        <include content="Object_Numeric_Button" description="Back">
            <param name="id">99</param>
            <label>&#xf05c;</label>
            <font>font_midi_iconic</font>
            <onup>17</onup>
            <onclick>PreviousMenu</onclick>
        </include>
        <include content="Object_Numeric_Button" description="Back">
            <param name="id">23</param>
            <label>&#xf55a;</label>
            <font>font_midi_iconic</font>
            <onup>18</onup>
        </include>
        <include content="Object_Numeric_Button" description="Left">
            <param name="id">20</param>
            <font>font_midi_iconic</font>
            <label>&#xf0a8;</label>
            <onup>19</onup>
        </include>
        <include content="Object_Numeric_Button" description="Right">
            <param name="id">22</param>
            <font>font_midi_iconic</font>
            <label>&#xf0a9;</label>
            <onup>10</onup>
        </include>
    </include>

</includes>
