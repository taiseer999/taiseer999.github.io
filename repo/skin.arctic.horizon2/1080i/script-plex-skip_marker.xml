<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3002</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo,true)</onload>
    <onload>Dialog.Close(videoosd,true)</onload>
    <controls>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="500" delay="0"/>
				<effect type="fade" start="100" end="50" time="1200" delay="3500"/>
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="50" end="0" time="500"/>
            </animation>
            <control type="group">
                <control type="group">
                    <top>30</top>
                    <right>30</right>
                    <control type="grouplist" id="3001">
                        <orientation>horizontal</orientation>
                        <height>84</height>
                        <align>right</align>
                        <control type="button" id="3002">
                            <label>$INFO[Window.Property(marker_message)]</label>
                            <width min="250">auto</width>
                            <font>font16_title</font>
                        </control>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
