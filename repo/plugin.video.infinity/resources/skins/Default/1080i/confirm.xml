<?xml version="1.0" encoding="UTF-8"?>
<window>
    <controls>
        <control type="image">
            <left>0</left>
            <top>0</top>
            <width>1920</width>
            <height>1080</height>
            <texture colordiffuse="FF000000">common/white.png</texture>
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="80" time="200" tween="sine" easing="in" />
            </animation>
        </control>
        <control type="group">
            <left>570</left>
            <top>300</top>
            <animation type="WindowOpen" reversible="false">
                <effect type="zoom" start="50" end="100" time="200" center="910,440" tween="quadratic" easing="out" />
            </animation>
            <control type="image">
                <height>480</height>
                <width>780</width>
                <texture border="16" colordiffuse="$INFO[Window.Property(infinity.backgroundColor)]">common/dialog.png</texture>
            </control>
            <control type="image">
                <height>60</height>
                <width>780</width>
                <texture border="16" colordiffuse="$INFO[Window.Property(infinity.titleBarColor)]">common/dialogtop.png</texture>
            </control>
            <control type="image">
                <left>5</left>
                <top>5</top>
                <width>50</width>
                <height>50</height>
                <align>left</align>
                <aligny>top</aligny>
                <aspectratio aligny="top">keep</aspectratio>
                <texture colordiffuse="FFCCCCCC">common/icon.png</texture>
            </control>
            <control type="label">
                <width max="660">auto</width>
                <left>60</left>
                <top>10</top>
                <height>20</height>
                <font>font16</font>
                <textcolor>$INFO[Window.Property(infinity.titleTextColor)]</textcolor>
                <align>center</align>
                <label>[UPPERCASE][B]$INFO[Window.Property(heading)][/B][/UPPERCASE]</label>
            </control>
            <control type="textbox">
                <left>40</left>
                <top>60</top>
                <width>720</width>
                <height>280</height>
                <font>font13</font>
                <textcolor>$INFO[Window.Property(infinity.textColor)]</textcolor>
                <align>center</align>
                <aligny>center</aligny>
                <label>$INFO[Window.Property(text)]</label>
            </control>
            <control type="button" id="10">
                <description>True</description>
                <top>380</top>
                <left>35</left>
                <width>340</width>
                <height>70</height>
                <onleft>11</onleft>
                <onright>11</onright>
                <label>[B]$INFO[Window.Property(ok_label)][/B]</label>
                <font>font12</font>
                <textcolor>$INFO[Window.Property(infinity.buttonTextColorNS)]</textcolor>
                <focusedcolor>$INFO[Window.Property(infinity.buttonTextColor)]</focusedcolor>
                <texturefocus colordiffuse="$INFO[Window.Property(infinity.buttonColor)]" border="30">common/circle.png</texturefocus>
                <texturenofocus colordiffuse="$INFO[Window.Property(infinity.buttonColorNF)]" border="30">common/circle2.png</texturenofocus>
                <align>center</align>
            </control>
            <control type="button" id="11">
                <description>False</description>
                <top>380</top>
                <left>400</left>
                <width>340</width>
                <height>70</height>
                <onleft>10</onleft>
                <onright>10</onright>
                <label>[B]$INFO[Window.Property(cancel_label)][/B]</label>
                <font>font12</font>
                <textcolor>$INFO[Window.Property(infinity.buttonTextColorNS)]</textcolor>
                <focusedcolor>$INFO[Window.Property(infinity.buttonTextColor)]</focusedcolor>
                <texturefocus colordiffuse="$INFO[Window.Property(infinity.buttonColor)]" border="30">common/circle.png</texturefocus>
                <texturenofocus colordiffuse="$INFO[Window.Property(infinity.buttonColorNF)]" border="30">common/circle2.png</texturenofocus>
                <align>center</align>
            </control>
        </control>
    </controls>
</window>
